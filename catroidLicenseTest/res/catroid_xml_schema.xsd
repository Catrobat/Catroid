<?xml version="1.0" encoding="utf-16"?>
<xsd:schema attributeFormDefault="unqualified" elementFormDefault="qualified" version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <xsd:element name="Content.Project" type="Content.ProjectType" />
  <xsd:complexType name="Content.ProjectType">
    <xsd:sequence>
      <xsd:element name="versionName" type="xsd:string" />
      <xsd:element name="spriteList" type="spriteListType" />
      <xsd:element name="deviceName" type="xsd:string" />
      <xsd:element name="name" type="xsd:string" />
      <xsd:element name="screenResolution" type="xsd:string" />
      <xsd:element name="versionCode" type="xsd:int" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="spriteListType">
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" name="Content.Sprite" type="Content.SpriteType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="Content.SpriteType">
    <xsd:sequence>
      <xsd:element name="costumeDataList" type="costumeDataListType" />
      <xsd:element name="soundList" type="xsd:string" />
      <xsd:element name="scriptList" type="scriptListType" />
      <xsd:element name="name" type="xsd:string" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="scriptListType">
    <xsd:sequence>
      <xsd:element name="Content.StartScript" type="Content.StartScriptType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="Content.StartScriptType">
    <xsd:sequence>
      <xsd:element name="brickList" type="brickListType" />
      <xsd:element name="sprite" type="spriteType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="spriteType">
    <xsd:attribute name="reference" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="brickListType">
    <xsd:sequence>
      <xsd:element name="Bricks.SetCostumeBrick" type="Bricks.SetCostumeBrickType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="Bricks.SetCostumeBrickType">
    <xsd:sequence>
      <xsd:element name="costumeData" type="costumeDataType" />
      <xsd:element name="sprite" type="spriteType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="spriteType">
    <xsd:attribute name="reference" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="costumeDataType">
    <xsd:attribute name="reference" type="xsd:string" />
  </xsd:complexType>
  <xsd:complexType name="costumeDataListType">
    <xsd:sequence>
      <xsd:element name="Common.CostumeData" type="Common.CostumeDataType" />
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="Common.CostumeDataType">
    <xsd:sequence>
      <xsd:element name="costumeFileName" type="xsd:string" />
      <xsd:element name="costumeName" type="xsd:string" />
    </xsd:sequence>
  </xsd:complexType>
</xsd:schema>
