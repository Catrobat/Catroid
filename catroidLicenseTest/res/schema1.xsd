<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="Content.Project" type="project" />
  
  <xs:complexType name="project">
    <xs:sequence>
      <xs:element name="spriteList" type="sprite" nillable="true" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="name" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="sprite">
    <xs:sequence>
      <xs:element name="soundList" type="soundInfo" nillable="true" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="costumeDataList" type="costumeData" nillable="true" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="scriptList" type="script" nillable="true" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="name" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="soundInfo">
    <xs:sequence>
      <xs:element name="soundFileName" type="xs:string" minOccurs="0"/>
      <xs:element name="title" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="costumeData">
    <xs:sequence>
      <xs:element name="costumeName" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="script" abstract="true">
    <xs:sequence>
      <xs:element name="brickList" type="brick" nillable="true" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="executingBrickIndex" type="xs:int"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="brick" abstract="true">
    <xs:sequence/>
  </xs:complexType>

  <xs:complexType name="broadcastBrick">
    <xs:complexContent>
      <xs:extension base="brick">
        <xs:sequence>
          <xs:element name="sprite" type="sprite" minOccurs="0"/>
          <xs:element name="selectedMessage" type="xs:string" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="broadcastReceiverBrick">
    <xs:complexContent>
      <xs:extension base="brick">
        <xs:sequence>
          <xs:element name="receiveScript" type="broadcastScript" minOccurs="0"/>
          <xs:element name="sprite" type="sprite" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="broadcastScript">
    <xs:complexContent>
      <xs:extension base="script">
        <xs:sequence>
          <xs:element name="selectedMessage" type="xs:string" minOccurs="0"/>
