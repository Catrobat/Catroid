          <xs:element name="spinnerPosition" type="xs:int"/>
          <xs:element name="pointedSprite" type="sprite" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="repeatBrick">
