      <xs:extension base="brick">
        <xs:sequence>
          <xs:element name="sprite" type="spriteRef" minOccurs="0"/>
          <xs:element name="soundInfo" type="soundInfo" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

