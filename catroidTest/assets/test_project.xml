<CatrobatProgram xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://catroid.org/CatrobatLanguage/xmlSchema/version-0.3/catrobatXmlSchema.xsd">
<Header>
	<ApplicationBuildName>CatroidReleaseBuild</ApplicationBuildName>
	<ApplicationBuildNumber>24</ApplicationBuildNumber>
	<ApplicationName>Catroid</ApplicationName>
	<ApplicationVersion>0.7.0beta</ApplicationVersion>
	<CatrobatLanguageVersion>0.3</CatrobatLanguageVersion>
	<DateTimeUpload/>
	<Description/>
	<DeviceName>HTC Desire</DeviceName>
	<MediaLicense/>
	<Platform>Android</Platform>
	<PlatformVersion>10</PlatformVersion>
	<ProgramLicense/>
	<ProgramName>testProject</ProgramName>
	<RemixOf/>
	<ScreenHeight>800</ScreenHeight>
	<ScreenWidth>480</ScreenWidth>
	<URL/>
	<UserHandle/>
</Header>
	<SpriteList>
		<Sprite>
			<Name>Stage</Name>
		</Sprite>
		<Sprite>
			<Name>first</Name>
			<ScriptList>
				<StartScript>
					<BrickList>
						<HideBrick/>
						<ShowBrick/>
						<SetSizeToBrick>
							<Size>0.8</Size>
						</SetSizeToBrick>
						<ComeToFrontBrick/>
						<SetLookBrick>
							<Look reference=""/>
						</SetLookBrick>
						<PointInDirectionBrick>
							<Degrees>-90.0</Degrees>
						</PointInDirectionBrick>
					</BrickList>
				</StartScript>
				<WhenScript>
					<Action>Tapped</Action>
					<BrickList>
						<WaitBrick>
							<TimeToWaitInMilliSeconds>1000</TimeToWaitInMilliSeconds>
						</WaitBrick>
						<PlaySoundBrick>
							<Sound reference=""/>
						</PlaySoundBrick>
					</BrickList>
				</WhenScript>
			</ScriptList>
		</Sprite>
		<Sprite>
			<Name>second</Name>
			<ScriptList>
				<StartScript>
					<BrickList>
						<PlaceAtBrick>
							<XPosition>100</XPosition>
							<YPosition>100</YPosition>
						</PlaceAtBrick>
						<SetXBrick>
							<XPosition>100</XPosition>
						</SetXBrick>
						<SetYBrick>
							<YPosition>100</YPosition>
						</SetYBrick>
						<ChangeXByNBrick>
							<XMovement>-100</XMovement>
						</ChangeXByNBrick>
						<ChangeYByNBrick>
							<YMovement>-100</YMovement>
						</ChangeYByNBrick>
						<GlideToBrick>
							<DurationInMilliSeconds>3000</DurationInMilliSeconds>
							<XDestination>500</XDestination>
							<YDestination>500</YDestination>
						</GlideToBrick>
						<GoNStepsBackBrick>
							<Steps>1</Steps>
						</GoNStepsBackBrick>
					</BrickList>
				</StartScript>
			</ScriptList>
		</Sprite>
	</SpriteList>
</CatrobatProgram>
