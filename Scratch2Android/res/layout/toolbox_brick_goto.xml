<?xml version="1.0" encoding="utf-8"?>

	<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/RelativeLayout01" 
		android:longClickable="true" 
		android:background="@drawable/brick_blue" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:clickable="true" android:onClick="@string/onBrickClickListener">
		<TextView android:id="@+id/ValueTextViewXY" 
			android:layout_alignParentLeft="true" 
			android:textStyle="bold" 
			android:textSize="18dip" 
			android:textColor="@color/white" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_centerVertical="true" 
			android:text="@string/goto_main_adapter">
		</TextView>
		<LinearLayout android:id="@+id/LinearLayout01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignParentRight="true" 
			android:layout_centerVertical="true" 
			android:clickable="true" 
			android:longClickable="true">
			<EditText android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:text="0" 
				android:inputType="number|numberDecimal" 
				android:maxLines="1" 
				android:maxLength="3" 
				android:id="@+id/InputValueEditTextX">
			</EditText>
			<EditText android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="0" 
				android:inputType="number|numberDecimal" 
				android:maxLines="1" 
				android:maxLength="3" 
				android:id="@+id/InputValueEditTextY">
		</EditText>
	</LinearLayout>
	
	</RelativeLayout>
	
	
