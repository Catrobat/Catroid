<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@android:style/Theme.Light">

    <TextView
            android:id="@+id/dialog_register_gender_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="@string/registration_step1"/>

    <TextView
            android:id="@+id/dialog_register_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/register_gender">
    </TextView>

    <RadioButton
            android:id="@+id/dialog_register_gender_radiobutton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_register_gender_textview"
            android:text="@string/register_male"/>

    <RadioButton
            android:id="@+id/dialog_register_gender_radiobutton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_register_gender_radiobutton_male"
            android:text="@string/register_female"/>

    <RadioButton
            android:id="@+id/dialog_register_gender_radiobutton_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_register_gender_radiobutton_female"
            android:text="@string/register_other"/>

    <EditText
            android:id="@+id/dialog_register_gender_edittext_other"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dialog_register_gender_radiobutton_other"
            android:layout_below="@+id/dialog_register_gender_radiobutton_female"
            android:minEms="5"
            />

    <TextView
            android:id="@+id/dialog_register_gender_textview_alreadyregistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@id/dialog_register_gender_radiobutton_other"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/already_registered"/>

</RelativeLayout>