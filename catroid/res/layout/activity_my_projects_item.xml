<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="133dp"
    android:background="@color/spritelist_item_background" >

    <ImageView
        android:id="@+id/my_projects_activity_project_image"
        android:layout_width="@dimen/project_thumbnail_width"
        android:layout_height="@dimen/project_thumbnail_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/my_projects_activity_project_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/my_projects_activity_project_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/solid_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_projects_activity_project_changed_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/my_projects_activity_project_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/my_projects_activity_project_image"
        android:gravity="center_vertical"
        android:text="@string/last_used"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_projects_activity_size_of_project_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/my_projects_activity_project_changed_1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/my_projects_activity_project_image"
        android:gravity="center_vertical"
        android:text="@string/size_of_project"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my_projects_activity_project_changed_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_projects_activity_project_changed_1"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/my_projects_activity_project_title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/my_projects_activity_size_of_project_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_projects_activity_size_of_project_1"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/my_projects_activity_project_changed_2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:textSize="14sp" />

</RelativeLayout>