<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<ImageView 
		android:id="@+id/grabber" 
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_alignParentBottom="true" 
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_mp_move" 
        android:layout_height="wrap_content" />

		<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:background="@drawable/brick_blue"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:longClickable="true"
	>
		<TextView
			android:id="@+id/ValueTextViewXY"
			android:text="@string/goto_main_adapter"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/GoToLinearLayout"
			android:paddingRight="5dip"
			android:textColor="@color/white"
			android:textSize="18dip"
			android:textStyle="bold"
		>
		</TextView>
		<LinearLayout
			android:id="@+id/GoToLinearLayout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dip"
			android:clickable="true"
			android:longClickable="true"
		>
			<TextView
				android:id="@+id/TextView01"
				android:text="@string/x_label"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:paddingRight="10dip"
				android:textColor="@color/white"
				android:textSize="18dip"
				android:textStyle="bold"
			>
			</TextView>
			<EditText
				android:id="@+id/InputValueEditTextX"
				android:text="0"
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:cursorVisible="false"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:inputType="number|numberDecimal|numberSigned"
				android:maxLength="4"
				android:maxLines="1"
				android:numeric="signed"
			>
			</EditText>
			<TextView
				android:id="@+id/TextView02"
				android:text="@string/y_label"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:textColor="@color/white"
				android:textSize="18dip"
				android:textStyle="bold"
			>
			</TextView>
			<EditText
				android:id="@+id/InputValueEditTextY"
				android:text="0"
				android:layout_height="wrap_content"
				android:layout_width="60dp"
				android:cursorVisible="false"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:inputType="number|numberDecimal|numberSigned"
				android:maxLength="4"
				android:maxLines="1"
			>
			</EditText>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>