<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultDialog"
    android:orientation="vertical"
    android:paddingBottom="0dp" >


    <RadioGroup
        android:orientation="horizontal"
        android:checkedButton="@+id/portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" >

        <RadioButton
            android:id="@+id/portrait"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/dialog_orientation_portrait"
            android:drawablePadding="16dp"
            android:padding="20dp" ></RadioButton>

        <RadioButton
            android:id="@+id/landscape"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/dialog_orientation_landscape"
            android:drawablePadding="16dp"
            android:padding="20dp"></RadioButton>

    </RadioGroup>
</ScrollView>