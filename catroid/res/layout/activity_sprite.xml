<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<!-- Top bar -->
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
	>
		<TextView
			android:text="@string/sprite_name"
			android:id="@+id/spriteNameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="18dip"
		></TextView>
		<Button
			android:text="@string/main_menu"
			android:id="@+id/mainMenuButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:textStyle="bold"
		>
		</Button>
	</LinearLayout>
	<!-- Sprite list -->
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
	>
		<TextView
			android:text="@string/script_list"
			android:id="@+id/scriptListLabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="14dip"
		></TextView>
		<ListView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/scriptListView"
		></ListView>
	</LinearLayout>
	<!-- Add script button -->
	<Button
		android:text="@string/add_new_script"
		android:id="@+id/addScriptButton"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
	></Button>
</LinearLayout>