<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_ev3_single_motor_move_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_ev3_single_motor_move_layout"
        style="@style/BrickContainer.Lego.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:horizontalSpacing="@dimen/brick_flow_layout_horizontal_spacing"
        app:verticalSpacing="@dimen/brick_flow_layout_vertical_spacing" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/brick_ev3_single_motor_move_first_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_label"
                    style="@style/BrickText.SingleLine"
                    android:text="@string/ev3_motor_move" >
                </TextView >

                <Spinner
                    android:id="@+id/brick_ev3_single_motor_move_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
              android:id="@+id/brick_ev3_single_motor_move_second_line"
              android:layout_below="@+id/brick_ev3_single_motor_move_first_line"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

                <TextView
                    android:id="@+id/lego_motor_action_to_text"
                    style="@style/BrickText.Multiple"
                    android:text="@string/ev3_motor_power_to" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_power_prototype_text_view"
                    style="@style/BrickPrototypeTextView" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_power_edit_text"
                    style="@style/BrickEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_inputType="number"
                    app:layout_textField="true"
                    android:clickable="false"
                    android:maxEms="5" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_percent"
                    style="@style/BrickText"
                    android:text="@string/percent_symbol" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_power_text"
                    style="@style/BrickText"
                    android:layout_marginLeft="3sp"
                    android:text="@string/ev3_motor_power" >
                </TextView >


            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/brick_ev3_single_motor_move_second_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_period_text"
                    style="@style/BrickText.SingleLine"
                    app:layout_newLine="true"
                    android:text="@string/ev3_motor_move_for_period" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_period_prototype_text_view"
                    style="@style/BrickPrototypeTextView" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_period_edit_text"
                    style="@style/BrickEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_inputType="number"
                    app:layout_textField="true"
                    android:clickable="false"
                    android:maxEms="5" >
                </TextView >

                <TextView
                    android:id="@+id/brick_ev3_single_motor_move_seconds"
                    style="@style/BrickText.SingleLine"
                    android:text="@string/ev3_seconds" >
                </TextView >
            </LinearLayout>
        </RelativeLayout>
    </org.catrobat.catroid.ui.BrickLayout >

</LinearLayout>