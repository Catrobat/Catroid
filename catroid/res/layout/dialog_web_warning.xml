<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DefaultDialog"
              android:orientation="vertical"
              android:theme="@android:style/Theme.Light" >

    <TextView
        style="@style/DefaultDialog.Item"
        android:layout_marginTop="@dimen/dialog_item_margin"
        android:paddingBottom="0dp"
        android:text="@string/main_menu_web_dialog_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <CheckBox
            android:id="@+id/main_menu_web_dialog_dont_show_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:checked="false"
            android:text="@string/main_menu_web_dialog_dont_show"
            android:textColor="@color/spritelist_details_text_color" />
    </LinearLayout >

</LinearLayout>