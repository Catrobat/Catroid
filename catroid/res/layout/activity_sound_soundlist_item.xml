<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
        
	<ImageView
		android:id="@+id/sound_img"
		android:layout_width="50dp" 
		android:layout_height="70dip"
		android:src="@drawable/speaker"/>
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView 
			android:id="@+id/sound_name" 
			android:layout_width="match_parent"
			android:paddingLeft="10dp"
			android:textSize="18dip" 
			android:layout_height="55dip" 
			android:gravity="center_vertical"
			android:clickable="false"
			android:focusable="false"
			android:longClickable="false"
			android:textColor="@color/solid_black"
			android:ellipsize="end"
			android:maxLines="2"
			android:paddingRight="8dip"/>
			
		<LinearLayout 
			android:orientation="horizontal" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:id="@+id/sound_duration" 
				android:layout_width="wrap_content"
				android:paddingLeft="10dp"
				android:textSize="12dip" 
				android:layout_height="20dip" 
				android:gravity="left"
				android:clickable="false"
				android:focusable="false"
				android:longClickable="false"
				android:textColor="@color/backbrown"
				android:maxLines="1"
				android:layout_weight=".5"/>
			
			<TextView 
				android:id="@+id/sound_size" 
				android:layout_width="wrap_content"
				android:paddingLeft="10dp"
				android:textSize="12dip" 
				android:layout_height="20dip" 
				android:gravity="right"
				android:clickable="false"
				android:focusable="false"
				android:longClickable="false"
				android:textColor="@color/backbrown"
				android:maxLines="1"
				android:layout_weight=".5"
				android:paddingRight="8dip"/>
			</LinearLayout>

		<LinearLayout 
			android:orientation="horizontal" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingRight="3dip"
			android:paddingLeft="3dip">
    		<Button 
    			android:id="@+id/btn_sound_play" 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_weight=".4"
    			android:text="@string/sound_play"/>
    		<Button 
    			android:id="@+id/btn_sound_pause" 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_weight=".3"
    			android:text="@string/sound_pause"/>
    		<Button 
    			android:id="@+id/btn_sound_rename" 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_weight=".3"
    			android:text="@string/sound_rename"/>
    		<Button 
    			android:id="@+id/btn_sound_delete" 
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content"
    			android:layout_gravity="right"
    			android:layout_weight=".2"
    			android:text="@string/sound_delete">
    		</Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
