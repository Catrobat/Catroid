<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" 
		android:layout_width="match_parent"
		android:orientation="vertical" 
		android:background="@drawable/brick_red">

		<TextView android:text="@string/nxt_play_tone"
			android:layout_centerVertical="true" 
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:paddingRight="10dip"
			android:textColor="@color/white" 
			android:textSize="18dip"
			android:textStyle="bold">
		</TextView>


		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView 
				android:text="@string/tone_duration"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">

				<EditText 
					android:id="@+id/nxt_tone_duration_edit_text"
					android:text="0.0" 
					android:layout_height="wrap_content"
					android:layout_width="60dp" 
					android:clickable="false"
					android:focusable="false" 
					android:focusableInTouchMode="false"
					android:gravity="right" 
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="3" 
					android:maxLines="1">
				</EditText>
				
				<TextView 
					android:text="@string/seconds"
					android:layout_centerVertical="true" 
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:paddingRight="10dip"
					android:textColor="@color/white" 
					android:textSize="18dip"
					android:textStyle="bold">
				</TextView>

			</LinearLayout>
		</RelativeLayout>
		
		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView 
				android:text="@string/nxt_tone_frequency"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">

				<EditText 
					android:id="@+id/nxt_tone_freq_edit_text"
					android:text="0.0" 
					android:layout_height="wrap_content"
					android:layout_width="60dp" 
					android:clickable="false"
					android:focusable="false" 
					android:focusableInTouchMode="false"
					android:gravity="right" 
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="3" 
					android:maxLines="1">
				</EditText>
				
				<TextView 
					android:text="@string/nxt_tone_hundred_hz"
					android:layout_centerVertical="true" 
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:paddingRight="10dip"
					android:textColor="@color/white" 
					android:textSize="18dip"
					android:textStyle="bold">
				</TextView>

			</LinearLayout>
		</RelativeLayout>
		
		<RelativeLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="match_parent" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">
			<Button 
					android:layout_width="30dip" 
					android:id="@+id/freq_down_btn" 
					android:layout_height="35dip" 
					android:clickable="false"
					android:focusable="false" 
					android:text="@string/minus_symbol"/>
			<SeekBar 
				android:id="@+id/seekBarNXTToneFrequency"
				android:clickable="false"
				android:focusable="false" 
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">
			</SeekBar>
			<Button 
					android:layout_width="30dip" 
					android:clickable="false"
					android:focusable="false" 
					android:id="@+id/freq_up_btn" 
					android:layout_height="35dip" 
					android:text="@string/plus_symbol" />
			</LinearLayout>
			
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>

