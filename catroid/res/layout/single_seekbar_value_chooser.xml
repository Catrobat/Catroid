<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motor_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="30dp"
        android:paddingTop="40dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/single_seekbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/single_seekbar_start_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginTop="20dp"
            android:text="0"
            android:textColor="@color/holo_blue_bright"
            tools:ignore="HardcodedText" />

        <SeekBar
            android:id="@+id/single_seekbar_seekbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:maxHeight="60dp"
            android:max="100"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/single_seekbar_end_value"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginTop="20dp"
            android:text="100"
            android:textColor="@color/holo_blue_bright"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/single_seekbar_value"
            style="@style/FragmentSeekbarChooserTextView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="100"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

    </TableRow>

</TableLayout>