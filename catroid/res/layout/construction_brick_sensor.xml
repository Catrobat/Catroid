<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="horizontal">
		
	<LinearLayout
		android:id="@+id/layout1"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/brick_turquoise" 
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/layout6"
			android:layout_alignTop="@+id/analog"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal" android:baselineAligned="false" android:layout_weight="1">
		
		  <TextView
				android:text="@string/sensor_main_adapter"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:textColor="@color/white"
				android:textSize="25dip"
				android:textStyle="bold"
				android:layout_weight=".75" />
			
		</LinearLayout>
		<LinearLayout
					android:id="@+id/layout2"
					android:layout_alignTop="@+id/analog"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_type"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/sensor_main_adapter"/>
				<ImageButton 
					android:id="@+id/construction_brick_sensor_digital_button"
					android:layout_height="36dip"
					android:layout_width="36dip"
					android:layout_marginLeft="64dip"
					android:src="@drawable/digital_inactive"
				></ImageButton>
				<ImageButton 
					android:id="@+id/construction_brick_sensor_analog_button"
					android:layout_height="36dip"
					android:layout_width="36dip"
					android:src="@drawable/analog_inactive"
				></ImageButton>
			</LinearLayout>
		<LinearLayout
				android:id="@+id/layout3"
				android:layout_alignTop="@+id/analog"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_pin"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_pin"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_pin"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="78dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
				
			</LinearLayout>
		<LinearLayout
			android:id="@+id/layout4"
			android:layout_alignTop="@+id/analog"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_value"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_value"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_value"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="56dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
			</LinearLayout>
		<LinearLayout
				android:id="@+id/layout3"
				android:layout_alignTop="@+id/analog"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_time"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_time"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_time"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="62dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
				<TextView
					android:text="@string/brick_sensor_time_seconds"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:layout_marginLeft="5dip"
					android:id="@+id/sensor"/>
			</LinearLayout>
	</LinearLayout>
</LinearLayout>
