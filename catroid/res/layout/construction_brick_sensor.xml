<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="horizontal">
	<ImageView
		android:id="@+id/grabber"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content"
		android:src="@drawable/ic_mp_move"
		android:layout_height="wrap_content" />
		
	<LinearLayout
		android:id="@+id/layout1"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/brick_violet" 
		android:orientation="vertical">
		
	  <TextView
			android:text="@string/sensor_main_adapter"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:textColor="@color/white"
			android:textSize="25dip"
			android:textStyle="bold" />
		<LinearLayout
					android:id="@+id/layout2"
					android:layout_alignTop="@+id/analog"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_type"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/sensor_main_adapter"/>
					
				<Button
					android:id="@+id/construction_brick_sensor_digital_button"
					android:text="D"
					android:layout_height="45dip"
					android:layout_width="50dip"
					android:layout_marginLeft="64dip"
					android:layout_weight=".10"
				></Button>
				
				<Button
					android:id="@+id/construction_brick_sensor_analog_button"
					android:text="A"
					android:layout_height="45dip"
					android:layout_width="50dip"
					android:layout_weight=".10"
				></Button>
			</LinearLayout>
		<LinearLayout
				android:id="@+id/layout3"
				android:layout_alignTop="@+id/analog"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_pin"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_pin"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_pin"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="78dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
				
			</LinearLayout>
		<LinearLayout
			android:id="@+id/layout4"
			android:layout_alignTop="@+id/analog"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_value"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_value"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_value"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="56dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
			</LinearLayout>
		<LinearLayout
				android:id="@+id/layout3"
				android:layout_alignTop="@+id/analog"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal" android:layout_weight="1">
				<TextView
					android:text="@string/brick_sensor_time"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:id="@+id/brick_sensor_time"/>
					
				<EditText
					android:id="@+id/construction_brick_sensor_time"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="62dip"
					android:clickable="true"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:gravity="right"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4"
					android:maxLines="1"
					android:numeric="signed" />
				<TextView
					android:text="@string/brick_sensor_time_seconds"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold" 
					android:layout_marginLeft="5dip"
					android:id="@+id/sensor"/>
			</LinearLayout>
	</LinearLayout>
</LinearLayout>