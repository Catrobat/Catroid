<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" 
		android:layout_width="match_parent"
		android:orientation="vertical" 
		android:background="@drawable/brick_red">
		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView android:text="@string/brick_motor_action"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">
				<Spinner android:layout_weight="1" 
					android:id="@+id/motor_spinner"
    				android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:clickable="false"
					android:focusable="false">
				</Spinner>
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView 
				android:text="@string/motor_duration"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">

				<EditText 
					android:id="@+id/motor_action_duration_edit_text"
					android:text="0" 
					android:layout_height="wrap_content"
					android:layout_width="60dp" 
					android:clickable="false"
					android:focusable="false" 
					android:focusableInTouchMode="false"
					android:gravity="right" 
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="3" 
					android:maxLines="1">
				</EditText>

			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<EditText 
				android:id="@+id/motor_action_speed_edit_text"
				android:text="0" 
				android:inputType="number|numberDecimal|numberSigned"
				android:maxLength="3" 
				android:layout_height="wrap_content"
				android:maxLines="1" 
				android:gravity="right" 
				android:clickable="false"
				android:layout_width="60dp" 
				android:focusableInTouchMode="false"
				android:focusable="false" 
				android:layout_alignParentRight="true">
				<requestFocus></requestFocus>
			</EditText>
			<TextView 
				android:text="@string/motor_speed"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>

		</RelativeLayout>

	</LinearLayout>
</LinearLayout>
