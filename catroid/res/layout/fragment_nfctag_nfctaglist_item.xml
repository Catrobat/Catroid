<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true"
    android:minHeight="90dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/fragment_nfctag_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="13dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_nfctag_item_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:longClickable="true"
        android:minHeight="90dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/fragment_nfctag_item_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="28dp"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_nfctag_item_title_text_view"
                style="@style/nfctag_fragment_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp" />

            <LinearLayout
                android:id="@+id/fragment_nfctag_item_detail_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fragment_nfctag_item_uid_prefix_text_view"
                        style="@style/nfctag_fragment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uid" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="24dp" >

                    <TextView
                        android:id="@+id/fragment_nfctag_item_uid_text_view"
                        style="@style/nfctag_fragment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>