<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_nxt_play_tone_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/brick_nxt_play_tone_layout"
        style="@style/BrickContainer.Lego.Big"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/brick_nxt_play_tone_label"
                style="@style/BrickText.SingleLine"
                android:text="@string/nxt_play_tone" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/brick_nxt_play_tone_duration"
                style="@style/BrickText.SingleLine"
                android:text="@string/tone_duration" >
            </TextView>

            <TextView
                android:id="@+id/nxt_tone_duration_text_view"
                style="@style/BrickText.SingleLine" >
            </TextView>

            <EditText
                android:id="@+id/nxt_tone_duration_edit_text"
                style="@style/BrickEditText"
                android:maxEms="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:inputType="number|numberDecimal|numberSigned" >
            </EditText>

            <TextView
                android:id="@+id/brick_nxt_play_tone_seconds"
                style="@style/BrickText.SingleLine"
                android:text="@string/seconds" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/brick_nxt_play_tone_frequency"
                style="@style/BrickText.SingleLine"
                android:text="@string/nxt_tone_frequency" >
            </TextView>

            <TextView
                android:id="@+id/nxt_tone_freq_text_view"
                style="@style/BrickText.SingleLine" >
            </TextView>

            <EditText
                android:id="@+id/nxt_tone_freq_edit_text"
                style="@style/BrickEditText"
                android:maxEms="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:inputType="number|numberDecimal|numberSigned" >
            </EditText>

            <TextView
                android:id="@+id/brick_nxt_play_tone_hundred_hz"
                style="@style/BrickText.SingleLine"
                android:text="@string/nxt_tone_hundred_hz" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
