<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/formula_green" >

    <LinearLayout
        android:id="@+id/brick_place_at_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <EditText
            android:id="@+id/formula_edit_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLength="5"
            android:maxLines="1"
            android:minWidth="60dip"
            android:text="@string/this_is_a_test" >
        </EditText>

        <TextView
            android:id="@+id/formula_operator"
            style="@style/brick_text_style"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/operator_plus" >
        </TextView>

        <EditText
            android:id="@+id/formula_edit_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLength="5"
            android:maxLines="1"
            android:minWidth="60dip"
            android:text="@string/this_is_a_test" >
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/formula_2_main_text"
        style="@style/brick_text_style"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/brick_place_at_linear_layout"
        android:text="@string/formula_element_calculate" >
    </TextView>

</RelativeLayout>