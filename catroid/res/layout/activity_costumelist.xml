<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="match_parent"
>
<ImageView
android:id="@+id/costume_image"
android:layout_width="80dp" android:layout_height="100dp"/>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<EditText 
android:text="EditText" 
android:id="@+id/costume_edit_name" 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingLeft="10dp"
android:textSize="16sp" />

<LinearLayout 
	android:id="@+id/linearLayout1" 
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
    <Button 
    android:layout_weight=".25" 
    android:id="@+id/edit_costume" 
    android:layout_width="5dip" 
    android:text="@string/edit_costume" 
    android:layout_height="wrap_content"></Button>
    
    <Button 
    android:layout_weight=".25" 
    android:id="@+id/copy_costume" 
    android:layout_width="5dip" 
    android:text="@string/copy_costume" 
    android:layout_height="wrap_content"></Button>
    
    <ImageButton 
    android:id="@+id/delete_button" 
    android:layout_width="wrap_content" 
    android:src="@drawable/exit" android:layout_height="48dip">
    </ImageButton>
</LinearLayout>
</LinearLayout>
</LinearLayout>