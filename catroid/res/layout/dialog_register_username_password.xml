<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light" >
    
    <TextView
        android:id="@+id/dialog_register_textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/username" >
    </TextView>


    <EditText
        android:id="@+id/dialog_register_edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_textview_username"
        android:inputType="text"
        android:maxLines="1"
        android:selectAllOnFocus="true" />

    <TextView
        android:id="@+id/dialog_register_textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_edittext_username"
        android:layout_marginLeft="10dp"
        android:text="@string/password" >
    </TextView>

    <EditText
        android:id="@+id/dialog_register_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_textview_password"
        android:gravity="top"
        android:inputType="textPassword"
        android:maxLines="1" >
    </EditText>
    
    <TextView
        android:id="@+id/dialog_register_username_password_textview_password_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_edittext_password"
        android:layout_marginLeft="10dp"
        android:text="@string/password_confirmation" >
    </TextView>

    <EditText
        android:id="@+id/dialog_register_username_password_edittext_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_username_password_textview_password_confirmation"
        android:gravity="top"
        android:inputType="textPassword"
        android:maxLines="1" >
    </EditText>
    
    <CheckBox
            android:id="@+id/dialog_register_username_password_checkbox_showpassword"
            android:layout_below="@+id/dialog_register_username_password_edittext_password_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_password" />

         <TextView
            android:id="@+id/dialog_register_username_password_textview_registerterms"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dialog_register_username_password_checkbox_showpassword"
            android:gravity="center_horizontal"
            android:text="@string/register_terms" >
        </TextView>

        <TextView
            android:id="@+id/dialog_register_username_password_textview_registerterms_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:textColorLink="#E68B00"
            android:layout_below="@+id/dialog_register_username_password_textview_registerterms"
            android:textSize="16sp" >
        </TextView>

</RelativeLayout>
