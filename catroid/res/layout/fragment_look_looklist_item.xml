 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/look_main_layout"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
 	<LinearLayout 
 	    android:id="@+id/look_checkbox_layout"
	    android:layout_width="47dp"
        android:layout_height="match_parent"
        android:background="@color/look_fragment_background_color"
        android:visibility="gone" >
        <CheckBox
	        android:id="@+id/look_checkbox"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
   			android:gravity="right"
   			android:layout_gravity="center_vertical"
        	android:layout_marginLeft="15dp"/>
	</LinearLayout>
 
	<RelativeLayout 
	    android:id="@+id/look_fragment_element"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:longClickable="true"
	    android:orientation="horizontal"
		android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    android:minHeight="90dp"
	    android:background="@color/look_fragment_button_color" >
	    <!--style="@style/MainMenuButton" > -->
	  
	
	    <ImageView
	        android:id="@+id/look_image"
	        android:layout_width="72dp"
	        android:layout_height="65dp"
	        android:scaleType="fitCenter"
	        android:background="@drawable/image_contour"
	     	android:layout_centerVertical="true"
	     	android:layout_toRightOf="@+id/look_checkbox_layout"
	        android:src="@drawable/catroid_banzai" />
	    
	     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@+id/look_image"
	        android:layout_toLeftOf="@+id/look_arrow"
	        android:paddingLeft="28dp"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	        
		    <TextView
		        android:id="@+id/look_name"
		        style="@style/fragment_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="default"
		        android:textColor="@color/look_fragment_main_text_color"
		        android:textSize="24sp" />
		
		    <LinearLayout
		        android:id="@+id/look_details"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
		        <LinearLayout 
	        	    android:id="@+id/sound_details_left"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="vertical">
	        		
		            <TextView style="@style/fragment_detail"
		      			android:id="@+id/sound_length"
		      		 	android:layout_width="wrap_content"
		       		 	android:layout_height="wrap_content"
		       		 	android:text="Measure:" />
		            
		            <TextView style="@style/fragment_detail"
		      			android:id="@+id/sound_size_prefix"
		      		 	android:layout_width="wrap_content"
		       		 	android:layout_height="wrap_content"
		       		 	android:text="Size:" />	
		        </LinearLayout>
		            
		        <LinearLayout 
	        	    android:id="@+id/sound_details_right"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:paddingLeft="24dp"
	        		android:orientation="vertical">
		            
		            <TextView style="@style/fragment_detail"
				        android:id="@+id/look_resolution"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				      
				        android:layout_weight=".5"
				        android:textColor="@color/look_fragment_detail_text_color" />
		            
		             <TextView style="@style/fragment_detail"
		                android:id="@+id/look_size"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		               
		                android:textColor="@color/look_fragment_detail_text_color"
		                android:layout_weight=".5" />
	    	
			    </LinearLayout>	
			</LinearLayout>	
		</LinearLayout>
		<ImageView  android:id="@+id/look_arrow"
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		 	android:layout_centerVertical="true"
		    android:src="@drawable/button_arrow" />
	</RelativeLayout>
</LinearLayout>
