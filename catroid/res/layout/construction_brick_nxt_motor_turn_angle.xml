<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" 
		android:layout_width="match_parent"
		android:orientation="vertical" 
		android:background="@drawable/brick_red">
		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView android:text="@string/brick_motor_turn_angle"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">
				<Spinner android:layout_weight="1" 
					android:id="@+id/motor_spinner"
    				android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:entries="@array/nxt_motor_chooser">
				</Spinner>
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_centerVertical="true">
			<TextView 
				android:text="@string/motor_angle"
				android:layout_centerVertical="true" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:paddingRight="10dip"
				android:textColor="@color/white" 
				android:textSize="18dip"
				android:textStyle="bold">
			</TextView>
			<LinearLayout 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true">

				<EditText 
					android:id="@+id/motor_turn_angle_edit_text"
					android:text="0" 
					android:layout_height="wrap_content"
					android:layout_width="60dp" 
					android:clickable="false"
					android:focusable="false" 
					android:focusableInTouchMode="false"
					android:gravity="right" 
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="4" 
					android:maxLines="1">
				</EditText>
				<Button 
					android:layout_width="40dip" 
					android:id="@+id/directions_btn" 
					android:layout_height="45dip" 
					android:text="@string/just_a_v" />
			</LinearLayout>
		</RelativeLayout>


	</LinearLayout>
</LinearLayout>




