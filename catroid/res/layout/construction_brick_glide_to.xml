<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<ImageView 
		android:id="@+id/grabber" 
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_alignParentBottom="true" 
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_mp_move" 
        android:layout_height="wrap_content" />

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="@drawable/brick_blue"
	>
		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_centerVertical="true"
		>
			<TextView
				android:text="@string/brick_glide"
				android:layout_centerVertical="true"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:paddingRight="10dip"
				android:textColor="@color/white"
				android:textSize="18dip"
				android:textStyle="bold"
			>
			</TextView>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
			>
				<EditText
					android:id="@+id/edit_text_glide_duration"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:clickable="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:inputType="number"
					android:maxLength="5"
					android:maxLines="1"
				>
				</EditText>
				<TextView
					android:text="@string/seconds"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold"
				>
				</TextView>
			</LinearLayout>
		</RelativeLayout>
		
		<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_centerVertical="true"
		>
			<TextView
				android:text="@string/brick_glide_to"
				android:layout_centerVertical="true"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:paddingRight="10dip"
				android:textColor="@color/white"
				android:textSize="18dip"
				android:textStyle="bold"
			>
			</TextView>
			<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			>
				<TextView
					android:text="@string/x_label"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:paddingRight="10dip"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold"
				>
				</TextView>
				<EditText
					android:id="@+id/edit_text_glide_x"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:clickable="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="3"
					android:maxLines="1"
				>
				</EditText>
				<TextView
					android:text="@string/y_label"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:paddingLeft="10dip"
					android:paddingRight="10dip"
					android:textColor="@color/white"
					android:textSize="18dip"
					android:textStyle="bold"
				>
				</TextView>
				<EditText
					android:id="@+id/edit_text_glide_y"
					android:text="0"
					android:layout_height="wrap_content"
					android:layout_width="60dp"
					android:clickable="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:inputType="number|numberDecimal|numberSigned"
					android:maxLength="3"
					android:maxLines="1"
				>
				</EditText>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>