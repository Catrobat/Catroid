<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:id="@+id/costumelist_footerview_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/website_blue"
            android:clickable="true" />

        <ImageView
            android:id="@+id/costumelist_footerview_camera_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/costumelist_footer_image_description_for_camera"
            android:src="@android:drawable/ic_menu_camera" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:id="@+id/costumelist_footerview_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/website_blue"
            android:clickable="true" />

        <ImageView
            android:id="@+id/costumelist_footerview_gallery_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/costumelist_footer_image_description_for_gallery"
            android:src="@android:drawable/ic_menu_gallery" />
    </FrameLayout>

</LinearLayout>