<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="left"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:background="@drawable/bg_dialog"
	android:paddingRight="5dip"
	android:paddingLeft="5dip"
>
	<!-- Menu buttons -->
			<Button
				android:id="@+id/back_to_construction_site_button"
				android:text="@string/back_to_construction_site"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@null"
				android:drawableTop="@drawable/back_selector"
				android:paddingTop="10dip"
			></Button>
			<Button
				android:id="@+id/resume_current_project_button"
				android:text="@string/resume_current_project"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@null"
				android:drawableTop="@drawable/resume_selector"
				android:paddingTop="20dip"
			></Button>
			<Button
				android:id="@+id/restart_current_project_button"
				android:text="@string/restart_current_project"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@null"
				android:drawableTop="@drawable/restart_selector"
				android:paddingTop="20dip"
			></Button>
			<Button
				android:id="@+id/snapshot_button"
				android:text="@string/snapshot"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@null"
				android:drawableTop="@drawable/screenshot_selector"
				android:paddingTop="20dip"
				android:paddingBottom="10dip"
			></Button>
</LinearLayout>
