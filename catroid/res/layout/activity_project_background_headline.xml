<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spritelist_background_headline"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="16dip"
        android:paddingTop="9dip"
        android:text="@string/spritelist_background_headline"
        android:textColor="@color/spritelist_details_text_color"
        android:textColorHighlight="@color/spritelist_details_text_color"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:background="@color/spritelist_separation_line_color" />

</LinearLayout>