<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/brick_blue" >

    <TextView
        android:id="@+id/brick_pointing_direction_text_view_title"
        style="@style/brick_text_style"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dip"
        android:text="@string/brick_point_in_direction" />
    
    <EditText
        android:id="@+id/brick_pointing_direction_edit_text_set_angle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/brick_pointing_direction_text_view_title"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        android:ems="10" >
    </EditText>

    <Button
        android:id="@+id/brick_pointing_direction_button_set_angle"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/brick_pointing_direction_edit_text_set_angle"
        android:clickable="false"
        android:focusable="false"
        android:background="@android:drawable/btn_dropdown" />

    <TextView
        android:id="@+id/brick_pointing_direction_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="30dip"
        android:minWidth="50dip"
        android:layout_alignBottom="@+id/brick_pointing_direction_button_set_angle"
        android:layout_alignRight="@+id/brick_pointing_direction_edit_text_set_angle"
        android:layout_alignTop="@+id/brick_pointing_direction_text_view_title"
        android:layout_toRightOf="@+id/brick_pointing_direction_text_view_title"
        android:text="" />

</RelativeLayout>
