<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:windowFullscreen="true"
	android:theme="@android:style/Theme.Light">
<!-- 	<LinearLayout
	    android:id="@+id/formula_editor_brick_space"
	    android:layout_width="match_parent"
	    android:layout_height="68dp" /> -->
	
	<ViewFlipper
        android:id="@+id/catflip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
	    <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/datview"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent" />
	    <LinearLayout  
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/catview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
    </ViewFlipper>
	
    <at.tugraz.ist.catroid.io.FormulaEditorEditText
        android:id="@+id/formula_editor_edit_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/catflip"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="8"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textSize="@dimen/text_size_large" />
      
    <at.tugraz.ist.catroid.io.CatKeyboardView
        android:id="@+id/keyboardcat"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/editor_button_bar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_above="@id/keyboardcat">

	    <ImageButton
	        android:id="@+id/formula_editor_ok_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ok_button" />
	    <ImageButton
	        android:id="@+id/formula_editor_back_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back_button" 
	        android:layout_toRightOf="@id/formula_editor_ok_button"/>
	    <ImageButton
	        android:id="@+id/formula_editor_cancel_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/cancel_button" 
	        android:layout_toRightOf="@id/formula_editor_back_button"/>

	</RelativeLayout>
	
</RelativeLayout>

