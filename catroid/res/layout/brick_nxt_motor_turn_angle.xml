<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/brick_red"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                style="@style/BrickText"
                android:layout_centerVertical="true"
                android:paddingRight="10dip"
                android:text="@string/brick_motor_turn_angle" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <Spinner
                    android:id="@+id/motor_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false" >
                </Spinner>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                style="@style/BrickText"
                android:layout_centerVertical="true"
                android:paddingRight="10dip"
                android:text="@string/motor_angle" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/motor_turn_angle_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:gravity="right"
                    android:minHeight="30dip"
                    android:minWidth="50dip"
                    android:paddingRight="5dip"
                    android:text="0"
                    android:textSize="20dip" />

                <EditText
                    android:id="@+id/motor_turn_angle_edit_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:text="0"
                    android:visibility="gone" >
                </EditText>

                <TextView
                    style="@style/BrickText"
                    android:text="@string/degree_symbol" >
                </TextView>

                <Button
                    android:id="@+id/directions_btn"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>