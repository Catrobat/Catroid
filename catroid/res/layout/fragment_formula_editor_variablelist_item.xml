<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:longClickable="true"
    android:orientation="vertical" >

    <include layout="@layout/fragment_formula_editor_variablelist_global_headline" />

    <include layout="@layout/fragment_formula_editor_variablelist_local_headline" />
    <include layout="@layout/fragment_formula_editor_variablelist_userbrick_headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/fragment_formula_editor_variablelist_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_selector" >

            <TextView
                android:id="@+id/fragment_formula_editor_variablelist_item_name_text_view"
                style="@style/fragment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/sound_fragment_text_main_color" />

            <TextView
                android:id="@+id/fragment_formula_editor_variablelist_item_value_text_view"
                style="@style/fragment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>