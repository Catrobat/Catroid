<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:scrollbarDefaultDelayBeforeFade="2000" >

    <!-- Top bar -->

    <include
        android:id="@+id/layout_brick_dialog_top"
        layout="@layout/brick_dialog_top" />

    <ListView
        android:id="@+id/addBrickDialogListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_brick_dialog_top"
        android:clickable="true"
        android:divider="#00000000"
        android:dividerHeight="10dip"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="50.0dp"
        android:scrollbarFadeDuration="2000" />

</RelativeLayout>