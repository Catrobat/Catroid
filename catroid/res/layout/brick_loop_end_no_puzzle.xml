<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_loop_end_no_puzzle_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/brick_loop_end_no_puzzle_layout"
        style="@style/BrickContainer.Control.Small"
        android:background="@drawable/brick_orange_1h_no_plug_slot" >

        <TextView
            android:id="@+id/brick_loop_end_no_puzzle_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_loop_end" />
    </LinearLayout>

</LinearLayout>