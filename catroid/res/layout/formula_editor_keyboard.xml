            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.355"
            android:text="@string/formula_editor_function_rand"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_variables"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.3"
            android:text="@string/formula_editor_variables"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>
