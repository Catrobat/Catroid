            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="@string/formula_editor_logic_equal"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_plus"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="@string/formula_editor_operator_plus"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_sensors"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.30"
            android:text="@string/formula_editor_sensors"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/formula_editor_keyboard_bracket_open"
