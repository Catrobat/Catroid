<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >

    <Button
        android:id="@+id/formula_editor_keyboard_compute"
        style="@style/FormulaEditorButton"
        android:layout_marginTop="@dimen/key_margin"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:text="@string/formula_editor_compute" />

    <Button
        android:id="@+id/formula_editor_keyboard_bracket_open"
        style="@style/FormulaEditorButton"
        android:layout_marginTop="@dimen/key_margin"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_compute"
        android:text="@string/formula_editor_bracket_open" />

    <Button
        android:id="@+id/formula_editor_keyboard_bracket_close"
        style="@style/FormulaEditorButton"
        android:layout_marginTop="@dimen/key_margin"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_bracket_open"
        android:text="@string/formula_editor_bracket_close" />

    <ImageButton
        android:id="@+id/formula_editor_keyboard_delete"
        style="@style/FormulaEditorButton"
        android:layout_marginTop="@dimen/key_margin"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_bracket_close"
        android:contentDescription="@string/formula_editor_image_button_description_delete"
        android:src="@android:drawable/ic_input_delete" />

    <Button
        android:id="@+id/formula_editor_keyboard_object"
        style="@style/FormulaEditorButton"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:layout_below="@+id/formula_editor_keyboard_compute"
        android:text="@string/formula_editor_object" />

    <Button
        android:id="@+id/formula_editor_keyboard_7"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_object"
        android:layout_below="@+id/formula_editor_keyboard_bracket_open"
        android:text="@string/number_7" />

    <Button
        android:id="@+id/formula_editor_keyboard_8"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_7"
        android:layout_below="@+id/formula_editor_keyboard_bracket_close"
        android:text="@string/number_8" />

    <Button
        android:id="@+id/formula_editor_keyboard_9"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_8"
        android:layout_below="@+id/formula_editor_keyboard_delete"
        android:text="@string/number_9" />

    <Button
        android:id="@+id/formula_editor_keyboard_divide"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_9"
        android:layout_below="@+id/formula_editor_keyboard_delete"
        android:text="@string/formula_editor_operator_divide" />

    <Button
        android:id="@+id/formula_editor_keyboard_function"
        style="@style/FormulaEditorButton"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:layout_below="@+id/formula_editor_keyboard_object"
        android:text="@string/formula_editor_math" />

    <Button
        android:id="@+id/formula_editor_keyboard_4"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_function"
        android:layout_below="@+id/formula_editor_keyboard_7"
        android:text="@string/number_4" />

    <Button
        android:id="@+id/formula_editor_keyboard_5"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_4"
        android:layout_below="@+id/formula_editor_keyboard_8"
        android:text="@string/number_5" />

    <Button
        android:id="@+id/formula_editor_keyboard_6"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_5"
        android:layout_below="@+id/formula_editor_keyboard_9"
        android:text="@string/number_6" />

    <Button
        android:id="@+id/formula_editor_keyboard_mult"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_6"
        android:layout_below="@+id/formula_editor_keyboard_divide"
        android:text="@string/formula_editor_operator_mult" />

    <Button
        android:id="@+id/formula_editor_keyboard_logic"
        style="@style/FormulaEditorButton"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:layout_below="@+id/formula_editor_keyboard_function"
        android:text="@string/formula_editor_logic" />

    <Button
        android:id="@+id/formula_editor_keyboard_1"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_logic"
        android:layout_below="@+id/formula_editor_keyboard_4"
        android:text="@string/number_1" />

    <Button
        android:id="@+id/formula_editor_keyboard_2"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_1"
        android:layout_below="@+id/formula_editor_keyboard_5"
        android:text="@string/number_2" />

    <Button
        android:id="@+id/formula_editor_keyboard_3"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_2"
        android:layout_below="@+id/formula_editor_keyboard_6"
        android:text="@string/number_3" />

    <Button
        android:id="@+id/formula_editor_keyboard_minus"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_3"
        android:layout_below="@+id/formula_editor_keyboard_mult"
        android:text="@string/formula_editor_operator_minus" />

    <Button
        android:id="@+id/formula_editor_keyboard_sensors"
        style="@style/FormulaEditorButton"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:layout_below="@+id/formula_editor_keyboard_logic"
        android:text="@string/formula_editor_sensors" />

    <Button
        android:id="@+id/formula_editor_keyboard_decimal_mark"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_sensors"
        android:layout_below="@+id/formula_editor_keyboard_1"
        android:text="@string/formula_editor_decimal_mark" />

    <Button
        android:id="@+id/formula_editor_keyboard_0"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_decimal_mark"
        android:layout_below="@+id/formula_editor_keyboard_2"
        android:text="@string/number_0" />

    <Button
        android:id="@+id/formula_editor_keyboard_equal"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_0"
        android:layout_below="@+id/formula_editor_keyboard_3"
        android:text="@string/formula_editor_logic_equal" />

    <Button
        android:id="@+id/formula_editor_keyboard_plus"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="17.5%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_equal"
        android:layout_below="@+id/formula_editor_keyboard_minus"
        android:text="@string/formula_editor_operator_plus" />

    <Button
        android:id="@+id/formula_editor_keyboard_data"
        style="@style/FormulaEditorButton"
        android:layout_marginLeft="@dimen/key_margin"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="16.66%"
        android:layout_below="@+id/formula_editor_keyboard_sensors"
        android:text="@string/formula_editor_data" />

    <Button
        android:id="@+id/formula_editor_keyboard_string"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_data"
        android:layout_below="@+id/formula_editor_keyboard_decimal_mark"
        android:text="@string/formula_editor_string" />

    <Button
        android:id="@+id/formula_editor_keyboard_ok"
        style="@style/FormulaEditorButton"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="16.66%"
        android:layout_toRightOf="@+id/formula_editor_keyboard_string"
        android:layout_below="@+id/formula_editor_keyboard_decimal_mark"
        android:text="@string/ok" />

</android.support.percent.PercentRelativeLayout>
