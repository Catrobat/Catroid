<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/solid_black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >

        <ImageButton
            android:id="@+id/formula_editor_keyboard_undo"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginLeft="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_weight="0.175"
			android:src="@drawable/icon_undo"/>

        <ImageButton
            android:id="@+id/formula_editor_keyboard_redo"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_weight="0.175"
			android:src="@drawable/icon_redo"/>"

        <Button
            android:id="@+id/formula_editor_keyboard_compute"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_weight="0.355"
            android:text="@string/formula_editor_compute"
            android:textColor="@color/white"
            android:lines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/formula_editor_keyboard_delete"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_weight="0.30"
 			android:src="@drawable/icon_backspace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/formula_editor_keyboard_7"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginLeft="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="7"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_8"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="8"
            android:textColor="@color/white"
            android:lines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/formula_editor_keyboard_9"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="9"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_divide"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="@string/formula_editor_operator_divide"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_object"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.30"
            android:text="@string/formula_editor_object"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/formula_editor_keyboard_4"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginLeft="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="4"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_5"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="5"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_6"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="6"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_mult"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="@string/formula_editor_operator_mult"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_math"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.30"
            android:text="@string/formula_editor_math"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/formula_editor_keyboard_1"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginLeft="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/formula_editor_keyboard_2"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="2"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/formula_editor_keyboard_3"
            style="@style/FormulaEditorButton"
            android:layout_height="@dimen/key_height"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_marginRight="@dimen/key_margin"
            android:layout_weight="0.175"
            android:text="3"
            android:textColor="@color/white" 
            android:lines="1"
            android:ellipsize="end"/>

        <Button
