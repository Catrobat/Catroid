<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.catrobat.catroid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_send_to_pc_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_send_to_pc_layout"
        style="@style/BrickContainer.Control.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:horizontalSpacing="@dimen/brick_flow_layout_horizontal_spacing"
        app:verticalSpacing="@dimen/brick_flow_layout_vertical_spacing" >

        <TextView
            android:id="@+id/brick_send_to_pc_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_send_to_pc" >
        </TextView>

        <TextView
            android:id="@+id/brick_send_to_pc_prototype_text_view"
            style="@style/BrickPrototypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/key_symbol"
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="15dp"
            android:textColor="@color/solid_black"
            android:visibility="visible" >
        </TextView>

        <EditText
            android:id="@+id/brick_send_to_pc_edit_text"
            style="@style/BrickEditText"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            app:layout_inputType="text"
            app:layout_textField="true"
            android:background="@drawable/key_symbol"
            android:gravity="center_vertical"
            android:inputType="textNoSuggestions"
            android:paddingLeft="13dp"
            android:paddingRight="15dp"
            android:textColor="@color/solid_black"
            android:textSize="15sp" >
        </EditText>
    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>