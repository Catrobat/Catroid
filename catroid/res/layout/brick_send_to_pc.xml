	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	
	    <CheckBox
	        android:id="@+id/brick_send_to_pc_checkbox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:visibility="gone" />
	
	    <LinearLayout
	        android:id="@+id/brick_send_to_pc_layout"
	        style="@style/BrickContainer.Control.Small" >
	
	        <TextView
	            android:id="@+id/brick_send_to_pc_label"
	            style="@style/BrickText.SingleLine"
	            android:text="@string/brick_send_to_pc" >
	        </TextView>
	
	        <TextView
	            android:id="@+id/brick_send_to_pc_prototype_text_view"
	            style="@style/BrickPrototypeTextView" 
	            android:background="@drawable/key_symbol"
	            android:textColor="@color/solid_black"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:paddingLeft="13dp"
	            android:paddingRight="15dp"
	            android:layout_marginLeft="20dp"
	            android:visibility="visible">
	        </TextView>
        
	        <EditText
	            android:id="@+id/brick_send_to_pc_edit_text"
	            android:background="@drawable/key_symbol"
	            android:inputType="textNoSuggestions"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/solid_black"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="13dp"
	            android:paddingRight="15dp"
	            android:layout_marginLeft="20dp"
	            android:cursorVisible="false"
	            android:visibility="visible"
	            android:textSize="15sp">
	        </EditText>
	
	    </LinearLayout>
	  
	    
	</LinearLayout>    

