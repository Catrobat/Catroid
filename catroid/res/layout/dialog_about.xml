<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dialog_about_license_info" />

    <TextView
        android:id="@+id/dialog_about_text_view_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColorLink="#E68B00"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dialog_about_text_view_version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_about_text_view_version_name"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_about_ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/bottom_separator"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>