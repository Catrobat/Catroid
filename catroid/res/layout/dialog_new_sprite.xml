<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<EditText
		android:id="@+id/newSpriteNameEditText"
		android:hint="@string/new_sprite_dialog_default_sprite_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxLines="1"
		android:singleLine="true" />
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<Button
			android:id="@+id/createNewSpriteButton"
			android:text="@string/new_sprite_dialog_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight=".5" />
		<Button
			android:id="@+id/cancelDialogButton"
			android:text="@string/cancel_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight=".5" />
	</LinearLayout>
</LinearLayout>