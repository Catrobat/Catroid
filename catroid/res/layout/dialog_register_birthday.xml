<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light" >

    <TextView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="@string/registration_step4" />

    <TextView
        android:id="@+id/birthday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/register_birthday" />
    
    <TextView
        android:id="@+id/birthday_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday_text"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="@string/register_birthday_month" />
    
    <Spinner
        android:id="@+id/birthday_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday_text"
        android:layout_toRightOf="@+id/birthday_month_text" />
    
    <TextView
        android:id="@+id/birthday_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday_month"
        android:layout_marginLeft="10dp"
        android:text="@string/register_birthday_year" >
    </TextView>

    <Spinner
        android:id="@+id/birthday_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday_month"
        android:layout_toRightOf="@+id/birthday_month_text" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/birthday_year" >

      
       <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="@string/next_registration_step" />
    </LinearLayout>


</RelativeLayout>
