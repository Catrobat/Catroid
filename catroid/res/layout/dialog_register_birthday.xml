<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light" >

    <TextView
        android:id="@+id/dialog_register_birthday_textview_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_birthday_textview_birthday"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="@string/register_birthday_month" />
    
    <Spinner
        android:id="@+id/dialog_register_birthday_spinner_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_birthday_textview_month" />
    
    <TextView
        android:id="@+id/dialog_register_birthday_textview_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_birthday_spinner_month"
        android:layout_marginLeft="10dp"
        android:text="@string/register_birthday_year" >
    </TextView>

    <Spinner
        android:id="@+id/dialog_register_birthday_spinner_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_register_birthday_textview_year"
        android:paddingBottom="10dp"/>

</RelativeLayout>
