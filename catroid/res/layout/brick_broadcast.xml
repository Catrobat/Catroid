<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BrickContainer.Control.Medium"
    android:orientation="vertical" >

    <TextView
        style="@style/BrickText.SingleLine"
        android:text="@string/brick_broadcast" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/brick_broadcast_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:clickable="false"
            android:focusable="false" />

        <Button
            android:id="@+id/brick_broadcast_button_new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/new_broadcast_message" />
    </LinearLayout>

</LinearLayout>