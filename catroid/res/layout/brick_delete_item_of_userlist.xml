<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/brick_delete_item_of_userlist_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_delete_item_of_userlist_layout"
        style="@style/BrickContainer.UserVariables.Medium"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalSpacing="@dimen/brick_flow_layout_horizontal_spacing"
        app:verticalSpacing="@dimen/brick_flow_layout_vertical_spacing" >

        <TextView
            android:id="@+id/brick_delete_item_of_userlist_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_delete_item_from_userlist_delete" />
        
         <Spinner
            android:id="@+id/delete_item_of_userlist_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false" />
         
           <TextView
            android:id="@+id/brick_delete_item_of_userlist_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_delete_item_from_userlist" />
        
         <TextView
            android:id="@+id/brick_delete_item_of_userlist_prototype_view"
            style="@style/BrickPrototypeTextView" 
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/brick_delete_item_of_userlist_edit_text"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true" />
        
       
    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>