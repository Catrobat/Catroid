<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <Button
        android:id="@+id/main_menu_button_continue"
        style="@style/MainMenuButton"
        android:layout_marginTop="3dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:drawableLeft="@drawable/ic_main_menu_continue"
        android:onClick="handleContinueButton"
        android:text="@string/main_menu_continue" />

    <Button
        android:id="@+id/main_menu_button_new"
        style="@style/MainMenuButton"
        android:drawableLeft="@drawable/ic_main_menu_new"
        android:onClick="handleNewButton"
        android:text="@string/main_menu_new" />

    <Button
        android:id="@+id/main_menu_button_programs"
        style="@style/MainMenuButton"
        android:drawableLeft="@drawable/ic_main_menu_programs"
        android:onClick="handleProgramsButton"
        android:text="@string/main_menu_programs" />

    <Button
        android:id="@+id/main_menu_button_forum"
        style="@style/MainMenuButton"
        android:drawableLeft="@drawable/ic_main_menu_forum"
        android:onClick="handleForumButton"
        android:text="@string/main_menu_forum" />

    <Button
        android:id="@+id/main_menu_button_web"
        style="@style/MainMenuButton"
        android:drawableLeft="@drawable/ic_main_menu_community"
        android:onClick="handleWebButton"
        android:text="@string/main_menu_web" />

    <Button
        android:id="@+id/main_menu_button_upload"
        style="@style/MainMenuButton"
        android:drawableLeft="@drawable/ic_main_menu_upload"
        android:onClick="handleUploadButton"
        android:text="@string/main_menu_upload" />

</LinearLayout>