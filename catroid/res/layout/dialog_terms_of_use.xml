<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/DefaultDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="0dp" >

    <TextView
        android:id="@+id/dialog_terms_of_use_text_view_info"
        style="@style/DefaultDialog.Item"
        android:layout_marginTop="@dimen/dialog_item_margin"
        android:gravity="center|bottom"
        android:paddingBottom="0dp"
        android:text="@string/dialog_terms_of_use_info"
        android:textColor="@color/spritelist_details_text_color" />

    <TextView
        android:id="@+id/dialog_terms_of_use_text_view_url"
        style="@style/DefaultDialog.Item"
        android:layout_below="@id/dialog_terms_of_use_text_view_info"
        android:gravity="center|bottom"
        android:minHeight="0dp"
        android:textColorLink="#E68B00"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/dialog_terms_of_use_check_box_agree_permanently"
        style="@style/DefaultDialog.Item"
        android:layout_below="@+id/dialog_terms_of_use_text_view_url"
        android:text="@string/dialog_terms_of_use_agree_permanent"
        android:gravity="center"
        android:minHeight="0dp"
        android:textColor="@color/spritelist_details_text_color"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>