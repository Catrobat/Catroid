<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_place_at_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/brick_place_at_layout"
        style="@style/BrickContainer.Motion.Medium"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/BrickText.SingleLine"
                android:text="@string/brick_place_at" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
			
            <TextView
                style="@style/BrickText.SingleLine"
                android:text="@string/x_label" >
            </TextView>
            
            <TextView
                android:id="@+id/brick_place_at_prototype_text_view_x"
                style="@style/BrickPrototypeTextView" />

            <EditText
                android:id="@+id/brick_place_at_edit_text_x"
                style="@style/BrickEditText"
                android:inputType="number|numberDecimal|numberSigned" >
            </EditText>

            <TextView
                style="@style/BrickText.SingleLine"
                android:text="@string/y_label" >
            </TextView>

            <TextView
                android:id="@+id/brick_place_at_prototype_text_view_y"
                style="@style/BrickPrototypeTextView" />

            <EditText
                android:id="@+id/brick_place_at_edit_text_y"
                style="@style/BrickEditText"
                android:inputType="number|numberDecimal|numberSigned" >
            </EditText>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>