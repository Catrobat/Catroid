<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_if_begin_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/brick_if_begin_layout"
        style="@style/BrickContainer.Control.Small" >

        <TextView
            android:id="@+id/if_label"
            style="@style/BrickText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dip"
            android:text="@string/brick_if_begin" >
        </TextView>

        <TextView
            android:id="@+id/brick_if_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/if_label"
            android:background="@color/white"
            android:gravity="right"
            android:minHeight="30dip"
            android:minWidth="50dip"
            android:paddingRight="5dip"
            android:text="0"
            android:textSize="20dip" >
        </TextView>

        <EditText
            android:id="@+id/brick_if_edit_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/if_label"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:minWidth="75dip"
            android:text="0"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/if_label_second_part"
            style="@style/BrickText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dip"
            android:text="@string/brick_if_begin_second_part" >
        </TextView>
    </RelativeLayout>
</LinearLayout>