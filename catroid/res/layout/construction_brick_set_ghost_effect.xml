<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
>
	<ImageView
		android:id="@+id/grabber"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content"
		android:src="@drawable/ic_mp_move"
		android:layout_height="wrap_content" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/brick_violet"
	>
	<TextView
		android:id="@+id/SetGhostEffectTextView"
		android:text="@string/brick_set_ghost_effect"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:textColor="@color/white"
		android:textSize="18dip"
		android:textStyle="bold"
		android:paddingRight="5dip"
	>
	</TextView>
	<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
	>
	<TextView
		android:id="@+id/SetGhostEffectTextView"
		android:text="@string/to_label"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:textColor="@color/white"
		android:textSize="18dip"
		android:textStyle="bold"
		android:paddingRight="5dip"
	>
	</TextView>
	<EditText
			android:id="@+id/construction_brick_set_ghost_effect_to_edit_text"
			android:text="0"
			android:layout_height="wrap_content"
			android:layout_width="50dp"
            android:layout_marginLeft="5dip"
			android:layout_toLeftOf="@+id/SetGhostEffectToTextView"
			android:cursorVisible="false"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:gravity="right"
			android:inputType="number|numberDecimal"
			android:maxLength="4"
			android:maxLines="1"
		>
		</EditText>
	<TextView
		android:id="@+id/SetGhostEffectToTextView"
		android:text="@string/percent"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/construction_brick_set_ghost_effect_to_edit_text"
		android:layout_centerVertical="true"
		android:paddingLeft="5dip"
		android:paddingRight="10dip"
		android:textColor="@color/white"
		android:textSize="18dip"
		android:textStyle="bold"
	>
	</TextView>
	</LinearLayout>
</LinearLayout>
</LinearLayout>