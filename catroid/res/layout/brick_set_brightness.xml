<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/brick_violet"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/SetBrightnessTextView"
            style="@style/brick_text_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dip"
            android:text="@string/brick_set_brightness" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/SetBrightnessTextView"
                style="@style/brick_text_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dip"
                android:text="@string/to_label" >
            </TextView>

            <TextView
                android:id="@+id/brick_set_brightness_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/SetBrightnessTextView"
                android:background="@color/white"
                android:gravity="right"
                android:minHeight="30dip"
                android:minWidth="50dip"
                android:paddingRight="5dip"
                android:text="0"
                android:textSize="20dip" >
            </TextView>

            <EditText
                android:id="@+id/brick_set_brightness_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/SetBrightnessTextView"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:inputType="number|numberDecimal"
                android:maxLength="6"
                android:maxLines="1"
                android:minWidth="60dip"
                android:text="0"
                android:visibility="gone" >
            </EditText>

            <TextView
                android:id="@+id/SetBrightnessTextView"
                style="@style/brick_text_style"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/brick_set_brightness_edit_text"
                android:paddingLeft="5dip"
                android:paddingRight="10dip"
                android:text="@string/percent" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>