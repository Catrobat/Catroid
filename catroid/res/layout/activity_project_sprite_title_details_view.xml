<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_activity_sprite_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/sprite_img" >

    <TextView
        android:id="@+id/project_activity_sprite_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        style="@style/ListViewItemTitleText" />

    <RelativeLayout
        android:id="@+id/project_activity_sprite_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_activity_sprite_title">

        <TextView
            android:id="@+id/textView_number_of_scripts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12.5dp" 
            style="@style/ListViewItemDetailsText"/>

        <TextView
            android:id="@+id/textView_number_of_looks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_number_of_scripts"
            android:paddingLeft="12.5dp" 
            style="@style/ListViewItemDetailsText"/>

        <TextView
            android:id="@+id/textView_number_of_bricks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView_number_of_scripts"
            android:paddingLeft="39dp" 
            style="@style/ListViewItemDetailsText"/>

        <TextView
            android:id="@+id/textView_number_of_sounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_number_of_bricks"
            android:layout_toRightOf="@id/textView_number_of_scripts"
            android:paddingLeft="39dp" 
            style="@style/ListViewItemDetailsText"/>
    </RelativeLayout>

</RelativeLayout>