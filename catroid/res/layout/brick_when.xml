<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/brick_script"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/WhenBrick"
        style="@style/brick_text_style"
        android:layout_gravity="center_vertical"
        android:text="@string/brick_when" >
    </TextView>

    <TextView
        android:id="@+id/WhenBrickActionTapped"
        style="@style/brick_text_style"
        android:layout_gravity="center_vertical"
        android:text="@string/action_tapped" />

    <!--
    inactive - to be revived when there are more actions for the spinner 
	<Spinner
		android:id="@+id/brick_when_spinner"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:clickable="false"
		android:focusable="false"
		
	/>
    -->

</LinearLayout>