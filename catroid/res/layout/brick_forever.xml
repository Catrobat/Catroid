<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/brick_forever_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/brick_forever_layout"
        style="@style/BrickContainer.Control.Small" >

        <TextView
            android:id="@+id/brick_forever_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_forever" />
    </LinearLayout>

</LinearLayout>