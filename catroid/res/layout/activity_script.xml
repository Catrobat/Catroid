<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/backrepeat"
>
	<!-- Action bar -->
	<include layout="@layout/actionbar"/>
	
	<!-- Sprite list -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		
	>
		<TextView
			android:id="@+id/brick_list_label"
			android:text="@string/brick_list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="14dip"
		></TextView>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		>
			<at.tugraz.ist.catroid.ui.dragndrop.DragNDropListView
				android:id="@+id/brick_list_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:drawSelectorOnTop="false"
				android:fastScrollEnabled="true"
				android:clickable="false"
				android:drawingCacheQuality="high" 
				android:cacheColorHint="#00000000" />
			<ImageView
				android:id="@+id/trash"
				android:layout_width="51dip"
				android:layout_height="97dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="-3dip"
				android:visibility="gone"
				android:src="@drawable/trash_green" />
		</RelativeLayout>
	</LinearLayout>
	<!-- Add brick button -->
	<Button
		android:id="@+id/add_brick_button"
		android:text="@string/add_new_brick"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
	></Button>
</LinearLayout>