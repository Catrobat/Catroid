<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<!-- Top bar -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
	>
		<TextView
			android:text="@string/script_name"
			android:id="@+id/scriptNameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="18dip"
		></TextView>
		<Button
			android:text="@string/construction_site_play"
			android:id="@+id/toStageButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:textStyle="bold"
			android:visibility="gone"
		>
		</Button>
		<Button
			android:text="@string/main_menu"
			android:id="@+id/mainMenuButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:textStyle="bold"
		>
		</Button>
	</LinearLayout>
	<!-- Sprite list -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
	>
		<TextView
			android:text="@string/brick_list"
			android:id="@+id/brickListLabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="14dip"
		></TextView>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		>
			<at.tugraz.ist.catroid.ui.dragndrop.DragNDropListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/brickListView"
				android:drawSelectorOnTop="false"
				android:fastScrollEnabled="true"
				android:clickable="false"
				android:drawingCacheQuality="high" />
			<ImageView
				android:id="@+id/trash"
				android:layout_width="51dip"
				android:layout_height="97dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="-3dip"
				android:visibility="gone"
				android:src="@drawable/trash_green" />
		</RelativeLayout>
	</LinearLayout>
	<!-- Add brick button -->
	<Button
		android:id="@+id/addBrickButton"
		android:text="@string/add_new_brick"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
	></Button>
</LinearLayout>