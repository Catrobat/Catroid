<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:padding="10dp"
>
	<EditText
		android:hint="@string/new_project_dialog_default_project_name"
		android:id="@+id/new_project_edit_text"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:maxLines="1"
		android:inputType="text" />
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<Button
			android:id="@+id/new_project_dialog_create_button"
			android:text="@string/new_project_dialog_button"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight=".5" />
		<Button
			android:id="@+id/cancelDialogButton"
			android:text="@string/cancel_button"
			android:layout_height="wrap_content"
			android:layout_weight=".5"
			android:layout_width="fill_parent" />
	</LinearLayout>
</LinearLayout>
