<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<ImageView 
		android:id="@+id/grabber" 
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_alignParentBottom="true" 
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_mp_move" 
        android:layout_height="wrap_content" />
		
	<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/brick_yellow"
		android:longClickable="true"
		android:focusable="false"
		android:focusableInTouchMode="false"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/ValueTextView"
			android:layout_alignParentLeft="true"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:text="@string/wait_main_adapter"
			android:textSize="18dip"
		>
		</TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18dip"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:id="@+id/LabelTextView"
			android:text="@string/seconds"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
		>
		</TextView>
		<EditText
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:id="@+id/InputValueEditText"
			android:layout_centerVertical="true"
			android:maxLength="5"
			android:tag="@string/constructional_brick_wait_edit_text_tag"
			android:text="5"
			android:layout_toLeftOf="@+id/LabelTextView"
			android:clickable="true"
			android:freezesText="false"
			android:inputType="number"
			android:cursorVisible="false"
			android:focusable="false"
			android:focusableInTouchMode="false"
		>
		</EditText>
	</RelativeLayout>
</LinearLayout>