<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="stage_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowAnimationStyle">@style/rotate_dialog_animation</item>     
    </style>
    
    <style name="custom_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowAnimationStyle">@style/slide_left_dialog_animation</item>     
    </style>
    
    <style name="brick_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowAnimationStyle">@style/slide_up_dialog_animation</item>     
    </style>
    
   	<style name="settings_activity" parent="android:Theme.Light">
    	<item name="android:windowNoTitle">true</item>
   	    <item name="android:windowBackground">@drawable/bg_dialog</item>
	</style>
    
    <style name="rotate_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/rotate_in_left</item>
        <item name="android:windowExitAnimation">@anim/rotate_out_left</item>
    </style>
    
    <style name="slide_left_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    
    <style name="slide_up_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
</resources>
