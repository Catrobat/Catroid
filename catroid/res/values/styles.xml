<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Catroid" parent="Theme.Sherlock.ForceOverflow">
        <item name="actionBarStyle">@style/Widget.Catroid.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Catroid.ActionBar</item>
    </style>

    <style name="Widget.Catroid.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_background</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_ic_back</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_ic_back</item>
        <item name="titleTextStyle">@style/Widget.Catroid.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/Widget.Catroid.ActionBar.Title</item>
        <item name="height">@dimen/actionbar_height</item>
    </style>

    <style name="Widget.Catroid.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="stage_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="StageButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="brick_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/slide_up_dialog_animation</item>
    </style>

    <style name="settings_activity" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Catroid.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Catroid.ActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="slide_left_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="slide_up_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MainMenuButton">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_menu_button_background</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:drawableRight">@drawable/ic_main_menu_button_arrow</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@color/main_menu_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/main_menu_button_text_shadow_color</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="ProgramMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BrickText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrickText.SingleLine">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BrickEditTextAndPrototypeTextView" parent="android:style/Widget.EditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:minWidth">@dimen/brick_edit_text_and_prototype_text_view_minimum_width</item>
        <item name="android:gravity">right</item>
        <item name="android:maxEms">5</item>
        <item name="android:minEms">3</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="brick_new">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
    </style>

    <style name="brick_blink">
        <item name="android:windowEnterAnimation">@anim/blink</item>
    </style>

</resources>