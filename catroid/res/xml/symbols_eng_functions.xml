<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="20%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height"
    >

    <Row>
        <Key android:codes="1000" android:keyLabel="sin()" android:keyEdgeFlags="left"/>
        <Key android:codes="1001" android:keyLabel="cos()"/>
        <Key android:codes="1002" android:keyLabel="tan()"/>
        <Key android:codes="81" android:keyLabel="+"/>
        <Key android:codes="69" android:keyLabel="-" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="1003" android:keyLabel="ln()" android:keyEdgeFlags="left"/>
        <Key android:codes="1004" android:keyLabel="log()"/>
        <Key android:codes="1006" android:keyLabel="sqrt()"/>
        <Key android:codes="17" android:keyLabel="*"/>
        <Key android:codes="76" android:keyLabel="/" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="1008" android:keyLabel="rand()" android:keyWidth="60%p"/>
        <Key android:codes="67" android:keyIcon="@drawable/sym_keyboard_delete" android:isRepeatable="true"/>
        <Key android:codes="26" android:keyLabel="^" android:keyEdgeFlags="right"/>
    </Row> 
    
    <Row  android:rowEdgeFlags="bottom">
        <Key android:codes="1005" android:keyLabel="pi"  android:keyEdgeFlags="left"/>
        <Key android:codes="1007" android:keyLabel="e"/>
        <Key android:codes="62" android:keyIcon="@drawable/sym_keyboard_space" android:keyWidth="40%p" android:isRepeatable="true"/> 
        <Key android:codes="60" android:keyLabel="2/3" android:keyWidth="20%p" android:isModifier="true" android:keyEdgeFlags="right" />
    </Row>
</Keyboard>