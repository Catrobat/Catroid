<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="20%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height"
    >

    <Row>
        <Key android:codes="1100" android:keyLabel="X-Sensor" android:keyWidth="30%p" android:keyEdgeFlags="left"/>
        <Key android:codes="1101" android:keyLabel="Y-Sensor" android:keyWidth="30%p" />
        <Key android:codes="81" android:keyLabel="+"/>
        <Key android:codes="69" android:keyLabel="-" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="1102" android:keyLabel="Z-Sensor" android:keyWidth="30%p" android:keyEdgeFlags="left"/>
        <Key android:codes="1103" android:keyLabel="Azimuth" android:keyWidth="30%p" />
        <Key android:codes="17" android:keyLabel="*"/>
        <Key android:codes="76" android:keyLabel="/" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="1104" android:keyLabel="Pitch" android:keyWidth="30%p" android:keyEdgeFlags="left"/>
        <Key android:codes="1105" android:keyLabel="Roll" android:keyWidth="30%p" />
        <Key android:codes="67" android:keyIcon="@drawable/sym_keyboard_delete" android:isRepeatable="true"/>
        <Key android:codes="26" android:keyLabel="^" android:keyEdgeFlags="right"/>
    </Row> 
    
    <Row  android:rowEdgeFlags="bottom">
        <Key android:codes="" android:keyLabel="" android:keyWidth="40%p" />
        <Key android:codes="62" android:keyIcon="@drawable/sym_keyboard_space" android:keyWidth="40%p" android:isRepeatable="true"/> 
        <Key android:codes="60" android:keyLabel="3/3" android:keyWidth="20%p" android:isModifier="true" android:keyEdgeFlags="right" />
    </Row>
    
</Keyboard>