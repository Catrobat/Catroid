<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1.3dp"
                android:color="@color/button_background_top_border_color" >
            </stroke>
        </shape>
    </item>
    <item android:top="1.3dp">
         <shape android:shape="rectangle" >
            <stroke
                android:width="3.9dp"
                android:color="@color/button_background_bottom_border_color" >
            </stroke>
        </shape>
    </item>
    <item android:top="1.3dp" android:bottom="3.9dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270.0"
                android:centerColor="@color/button_background_gradient_start_color"
                android:centerY="0.67"
                android:endColor="@color/button_background_gradient_end_color"
                android:startColor="@color/button_background_gradient_start_color"
                android:type="linear" />
        </shape>
    </item>
	
</layer-list>