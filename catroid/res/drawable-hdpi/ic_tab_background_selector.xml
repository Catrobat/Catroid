<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:drawable="@drawable/ic_tab_background_selected" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- Inactive tab -->
    <item android:drawable="@drawable/ic_tab_background" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <!-- Pressed tab -->
    <item android:drawable="@drawable/ic_tab_background_selected" android:state_pressed="true"/>
    <!-- Selected tab (using d-pad) -->
    <item android:drawable="@drawable/ic_tab_background_selected" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <item android:drawable="@drawable/ic_tab_background_selected"/>

</selector>