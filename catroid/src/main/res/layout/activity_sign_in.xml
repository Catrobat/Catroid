<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dialog_content_area_padding"
    android:orientation="vertical"
    android:gravity="center">

        <Button
            android:id="@+id/sign_in_login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="?attr/x_large"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/sign_in_register"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="?attr/x_large"
            android:onClick="onButtonClick"/>

       <com.google.android.gms.common.SignInButton
           android:id="@+id/sign_in_google_login_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           app:buttonSize="wide"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/material_design_spacing_x_large"
            >

            <TextView
                android:id="@+id/register_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="@string/register_terms" />

            <TextView
                android:id="@+id/register_terms_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="@string/register_code_terms_of_use_text" />
        </LinearLayout >
</LinearLayout>
