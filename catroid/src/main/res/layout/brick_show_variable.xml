<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_show_variable_layout"
        style="@style/BrickContainer.UserVariables.Medium">

        <include layout="@layout/icon_brick_category_data" />

        <TextView
            android:id="@+id/brick_show_variable_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_show_variable" />

        <Spinner
            android:id="@+id/show_variable_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/brick_show_variable_label_at"
            style="@style/BrickText.SingleLine"
            app:layout_newLine="true"
            android:text="@string/brick_show_variable_position" />

        <TextView
            android:id="@+id/brick_show_variable_x_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/x_label" />

        <TextView
            android:id="@+id/brick_show_variable_edit_text_x"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true" />

        <TextView
            android:id="@+id/brick_show_variable_y_textview"
            style="@style/BrickText.SingleLine"
            android:paddingStart="@dimen/material_design_spacing_small"
            android:text="@string/y_label" />

        <TextView
            android:id="@+id/brick_show_variable_edit_text_y"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true" />

    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>