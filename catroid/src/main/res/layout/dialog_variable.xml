    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/material_design_spacing_small"
    android:background="@drawable/button_background_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="4dp"
            android:text="@string/dialog_complete_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vh_item_title"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/default_variable_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vh_item_title"/>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/variable_name"
            android:layout_width="match_parent"
            android:textColor="@color/solid_white"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/data_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vh_item_title"/>
        <TextView
            android:textColor="@color/solid_white"
            android:id="@+id/variable_value"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="4dp"
            android:id="@+id/ok_btn"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/vh_item_title"
            android:background="@drawable/button_background_selector"/>

    </LinearLayout>
    </ScrollView>