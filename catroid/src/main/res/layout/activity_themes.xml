<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ThemesActivity">

    <include layout="@layout/toolbar" />

    <RadioGroup
        android:id="@+id/radio_group_themes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/theme_catroid_classic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:text="@string/theme_name_classic"
        android:textColor="?attr/accent"
        android:textSize="@dimen/text_size_medium" />

    <RadioButton
        android:id="@+id/theme_catroid_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:text="@string/theme_name_light"
        android:textColor="?attr/accent"
        android:textSize="@dimen/text_size_medium" />

</RadioGroup>

</LinearLayout>