<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/application_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="65dp"
            android:id="@+id/image"
            android:layout_marginLeft="9dp"
            android:background="@drawable/spritelist_item_thumbnail_border"
            android:cropToPadding="true"
            android:padding="1.5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            style="@style/ListViewItemTitleText"
            android:ellipsize="end"
            android:paddingRight="1.5dp"
            android:paddingTop="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_title"
        android:text="@string/description"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_value"
        style="@style/ShowDetailsValue"
        android:hint="@string/description_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_title"
        android:text="@string/author"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_value"
        style="@style/ShowDetailsValue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_title"
        android:text="@string/size"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_value"
        style="@style/ShowDetailsValue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_access_title"
        android:text="@string/last_used"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_access_value"
        style="@style/ShowDetailsValue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/screen_size_title"
        android:text="@string/screen_size"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/screen_size_value"
        style="@style/ShowDetailsValue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mode_title"
        android:text="@string/mode"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mode_value"
        style="@style/ShowDetailsValue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remix_of_title"
        android:text="@string/remix_of"
        style="@style/ShowDetailsTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remix_of_value"
        style="@style/ShowDetailsValue"/>

</LinearLayout>