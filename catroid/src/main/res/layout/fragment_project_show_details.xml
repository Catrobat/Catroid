<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/view_holder_padding"
    android:paddingEnd="@dimen/view_holder_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/view_holder_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="65dp"
            android:layout_marginEnd="@dimen/img_margin"
            android:background="@drawable/image_contour"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="?attr/large" />
    </LinearLayout>

    <TextView
        android:id="@+id/description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/description_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint" />

    <TextView
        android:id="@+id/author_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/author_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/notes_and_credits_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_and_credits_title"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/notes_and_credits_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/notes_and_credits_hint" />

    <TextView
        android:id="@+id/size_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_value" />

    <TextView
        android:id="@+id/last_access_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_used"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/last_access_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/screen_size_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_size"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/screen_size_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mode"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/mode_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remix_of_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remix_of"
        android:textSize="?attr/large"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/remix_of_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>