<ScrollView style="style/DefaultDialog"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/dialog_new_look"
        style="@style/DefaultDialog.Item"
        android:orientation="vertical">

        <LinearLayout
            style="@style/DefaultDialog.Item"
            android:weightSum="2">

            <TextView
                style="@style/DialogNewTextView"
                android:id="@+id/dialog_new_look_paintroid"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_paintroid"
                android:text="@string/add_look_draw_new_image" />

            <TextView
                style="@style/DialogNewTextView"
                android:id="@+id/dialog_new_look_media_library"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_media_library"
                android:text="@string/add_look_media_library" />
        </LinearLayout>

        <LinearLayout
            style="@style/DefaultDialog.Item"
            android:weightSum="2">

            <TextView
                style="@style/DialogNewTextView"
                android:id="@+id/dialog_new_look_gallery"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_gallery"
                android:text="@string/add_look_choose_image" />

            <TextView
                style="@style/DialogNewTextView"
                android:id="@+id/dialog_new_look_camera"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_camera"
                android:text="@string/add_look_from_camera" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_new_look_drone"
            style="@style/DefaultDialog.Item"
            android:weightSum="2">

            <TextView
                style="@style/DialogNewTextView"
                android:layout_width="0dp"
                android:id="@+id/dialog_new_look_drone_video"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_video"
                android:text="@string/add_look_drone_video" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
