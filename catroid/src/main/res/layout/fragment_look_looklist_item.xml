<LinearLayout
    style="@style/LinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/look_main_layout"
    android:minHeight="90dp"
    android:orientation="horizontal" >

    <CheckBox
        style="@style/WrapContent.Gone.Margin"
        android:id="@+id/fragment_look_item_checkbox"
        android:gravity="right" />

    <RelativeLayout
        style="@style/RelativeLayout"
        android:id="@+id/fragment_look_item_relative_layout"
        android:background="@drawable/button_background_selector"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:orientation="horizontal" >

        <ImageView
            style="@style/ActivityFragmentImageView"
            android:id="@+id/fragment_look_item_image_view"
            android:background="@drawable/image_contour"
            android:contentDescription="@string/look"
            android:src="@drawable/default_project_bird_wing_up" />

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_toRightOf="@+id/fragment_look_item_image_view"
            android:gravity="center_vertical"
            android:paddingLeft="12.5dp" >

            <TextView
                android:id="@+id/fragment_look_item_name_text_view"
                style="@style/look_fragment_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="8dp" />

            <LinearLayout
                android:id="@+id/fragment_look_item_detail_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fragment_look_item_measure_prefix_text_view"
                        style="@style/look_fragment_detail"
                        android:text="@string/look_measure" />

                    <TextView
                        android:id="@+id/fragment_look_item_size_prefix_text_view"
                        style="@style/look_fragment_detail"
                        android:text="@string/size" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="39dp" >

                    <TextView
                        android:id="@+id/fragment_look_item_measure_text_view"
                        style="@style/look_fragment_detail" />

                    <TextView
                        android:id="@+id/fragment_look_item_size_text_view"
                        style="@style/look_fragment_detail" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>