<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/formula_editor_keyboard_copy"
            style="@style/FormulaEditorSymbolButton"
            android:contentDescription="@string/copy"
            android:src="@drawable/ic_formula_editor_content_copy"
            android:layout_column="4"/>

        <ImageButton
            android:id="@+id/formula_editor_keyboard_paste"
            style="@style/FormulaEditorSymbolButton"
            android:contentDescription="@string/paste"
            android:src="@drawable/ic_formula_editor_content_paste"
            android:layout_column="5"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/formula_editor_keyboard_functional_button_toggle"
            style="@style/FormulaEditorToggleFunctionsButton"
            android:contentDescription="@string/formula_editor_image_button_description_functions_toggle"
            android:src="@drawable/ic_keyboard_toggle_caret_left" />

        <Button
            android:id="@+id/formula_editor_keyboard_7"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_7" />

        <Button
            android:id="@+id/formula_editor_keyboard_8"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_8" />

        <Button
            android:id="@+id/formula_editor_keyboard_9"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_9" />


        <ImageButton
            android:id="@+id/formula_editor_keyboard_delete"
            style="@style/FormulaEditorDeleteButton"
            android:layout_span="2"
            android:contentDescription="@string/formula_editor_image_button_description_delete"
            android:src="@drawable/ic_input_delete" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRowFunctionButtons1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <Button
            android:id="@+id/formula_editor_keyboard_mathematics"
            style="@style/FormulaEditorCategoryButton"
            android:layout_span="2"
            android:text="@string/formula_editor_functions_maths" />

        <Button
            android:id="@+id/formula_editor_keyboard_object"
            style="@style/FormulaEditorCategoryButton"
            android:layout_span="2"
            android:text="@string/formula_editor_object" />

        <Button
            android:id="@+id/formula_editor_keyboard_text"
            style="@style/FormulaEditorCategoryButton"
            android:layout_marginStart="@dimen/key_margin"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_functions_strings" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRowFunctionButtons2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <Button
            android:id="@+id/formula_editor_keyboard_lists"
            style="@style/FormulaEditorCategoryButton"
            android:layout_marginTop="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_functions_lists" />

        <Button
            android:id="@+id/formula_editor_keyboard_sensors"
            style="@style/FormulaEditorCategoryButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_device" />

        <Button
            android:id="@+id/formula_editor_keyboard_logic"
            style="@style/FormulaEditorCategoryButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_logic" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRowFunctionButtons3"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <Button
            android:id="@+id/formula_editor_keyboard_data"
            style="@style/FormulaEditorCategoryButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_data" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/formula_editor_keyboard_string"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:text="@string/formula_editor_string" />

        <Button
            android:id="@+id/formula_editor_keyboard_4"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_4" />

        <Button
            android:id="@+id/formula_editor_keyboard_5"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_5" />

        <Button
            android:id="@+id/formula_editor_keyboard_6"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_6" />

        <Button
            android:id="@+id/formula_editor_keyboard_divide"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:text="@string/formula_editor_operator_divide" />

        <Button
            android:id="@+id/formula_editor_keyboard_mult"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:text="@string/formula_editor_operator_mult" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/formula_editor_keyboard_color_picker"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:contentDescription="@string/formula_editor_image_button_description_color_picker"
            android:src="@drawable/ic_color_picker" />

        <Button
            android:id="@+id/formula_editor_keyboard_1"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_1" />

        <Button
            android:id="@+id/formula_editor_keyboard_2"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_2" />

        <Button
            android:id="@+id/formula_editor_keyboard_3"
            style="@style/FormulaEditorNumberButton"
            android:layout_span="1"
            android:text="@string/number_3" />

        <Button
            android:id="@+id/formula_editor_keyboard_minus"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:text="@string/formula_editor_operator_minus" />

        <Button
            android:id="@+id/formula_editor_keyboard_plus"
            style="@style/FormulaEditorSymbolButton"
            android:layout_span="1"
            android:text="@string/formula_editor_operator_plus" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/formula_editor_keyboard_bracket_open"
            style="@style/FormulaEditorSymbolButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="1"
            android:text="@string/formula_editor_bracket_open" />

        <Button
            android:id="@+id/formula_editor_keyboard_bracket_close"
            style="@style/FormulaEditorSymbolButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="1"
            android:text="@string/formula_editor_bracket_close" />

        <Button
            android:id="@+id/formula_editor_keyboard_0"
            style="@style/FormulaEditorNumberButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="1"
            android:text="@string/number_0" />

        <Button
            android:id="@+id/formula_editor_keyboard_decimal_mark"
            style="@style/FormulaEditorNumberButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="1"
            android:text="@string/formula_editor_decimal_mark" />

        <Button
            android:id="@+id/formula_editor_keyboard_compute"
            style="@style/FormulaEditorComputeButton"
            android:layout_marginBottom="@dimen/key_margin"
            android:layout_span="2"
            android:text="@string/formula_editor_compute" />
    </TableRow>
</TableLayout>
