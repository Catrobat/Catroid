<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="@dimen/dialog_content_area_padding_top"
android:paddingStart="@dimen/dialog_content_area_padding"
android:paddingEnd="@dimen/dialog_content_area_padding"
android:paddingBottom="@dimen/dialog_content_area_padding_top">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_new_look_paintroid"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_look_draw_new_image"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_draw_image" />

            <TextView
                android:id="@+id/dialog_new_look_media_library"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_look_media_library"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_media_library_look" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_new_look_gallery"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_look_choose_image"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_gallery" />

            <TextView
                android:id="@+id/dialog_new_look_object_library"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_look_object_library"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_apps" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

             <TextView
                 android:id="@+id/dialog_new_look_camera"
                 android:background="@drawable/new_object_dialog_selector"
                 android:gravity="center"
                 android:text="@string/add_look_from_camera"
                 android:textSize="?attr/medium"
                 app:drawableTopCompat="@drawable/ic_camera" />

            <TextView
                android:id="@+id/dialog_new_look_backpack"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/backpack"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_content_paste" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

             <TextView
                 android:id="@+id/dialog_new_look_from_local"
                 android:background="@drawable/new_object_dialog_selector"
                 android:gravity="center"
                 android:text="@string/add_look_from_local_project"
                 android:textSize="?attr/medium"
                 app:drawableTopCompat="@drawable/ic_library_add" />

            <TextView
                android:id="@+id/dialog_new_look_empty_object"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_look_empty_object"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_plus"
                app:drawableTint="@color/solid_white" />
        </TableRow>
    </TableLayout>
</ScrollView>
