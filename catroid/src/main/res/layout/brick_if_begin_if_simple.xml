<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_if_begin_checkbox_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_if_begin_layout_simple"
        style="@style/BrickContainer.Control.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:horizontalSpacing="@dimen/brick_flow_layout_horizontal_spacing"
        app:verticalSpacing="@dimen/brick_flow_layout_vertical_spacing">

        <RelativeLayout
            android:id="@+id/brick_if_begin_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:horizontalSpacing="@dimen/brick_flow_layout_horizontal_spacing"
            app:verticalSpacing="@dimen/brick_flow_layout_vertical_spacing">

                <org.catrobat.catroid.utils.BrickTextView
                    android:id="@+id/if_label_simple"
                    style="@style/BrickText.Multiple"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/brick_if_begin_first_part_text_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/brick_if_begin" />

                <org.catrobat.catroid.utils.BrickTextView
                    android:id="@+id/brick_if_begin_first_part_text_view"
                    style="@style/BrickEditText"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/if_label_simple"
                    android:layout_toLeftOf="@+id/brick_if_begin_operator_spinner"
                    android:layout_toRightOf="@+id/if_label_simple"
                    android:layout_toStartOf="@+id/brick_if_begin_operator_spinner"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center" />

                <org.catrobat.catroid.utils.BrickSpinner
                    android:id="@+id/brick_if_begin_operator_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/brick_if_begin_first_part_text_view"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center" />

                <org.catrobat.catroid.utils.BrickTextView
                    android:id="@+id/brick_if_begin_second_part_text_view"
                    style="@style/BrickEditText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brick_if_begin_first_part_text_view"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center" />

                <org.catrobat.catroid.utils.BrickTextView
                    android:id="@+id/if_label_second_part"
                    style="@style/BrickText.Multiple"
                    android:layout_alignBaseline="@+id/brick_if_begin_second_part_text_view"
                    android:layout_alignBottom="@+id/brick_if_begin_second_part_text_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/brick_if_begin_second_part_text_view"
                    android:layout_toRightOf="@+id/brick_if_begin_second_part_text_view"
                    android:paddingLeft="5dip"
                    android:text="@string/brick_if_begin_second_part" />
        </RelativeLayout>

        <org.catrobat.catroid.utils.BrickTextView
            android:id="@+id/if_else_prototype_punctuation_simple"
            style="@style/BrickText.Multiple"
            android:paddingLeft="5dip"
            android:text="@string/punctuation_mark"
            app:layout_newLine="true" />

         <org.catrobat.catroid.utils.BrickTextView
             android:id="@+id/if_prototype_else_simple"
             style="@style/BrickText.Multiple"
             android:paddingLeft="5dip"
             android:text="@string/brick_if_else" />

       <org.catrobat.catroid.utils.BrickTextView
           android:id="@+id/if_else_prototype_punctuation2_simple"
           style="@style/BrickText.Multiple"
           android:paddingLeft="5dip"
           android:text="@string/punctuation_mark" />
    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>
