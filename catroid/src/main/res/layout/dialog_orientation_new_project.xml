<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultDialog"
    android:orientation="vertical" >


    <RadioGroup
        android:orientation="horizontal"
        android:checkedButton="@+id/portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_radio_group_margin"
        android:layout_marginRight="@dimen/dialog_radio_group_margin"
        android:paddingTop="16dp" >

        <RadioButton
            android:id="@+id/portrait"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:drawableLeft="@drawable/dialog_orientation_portrait"
            android:drawablePadding="@dimen/dialog_radio_button_drawable_padding"
            android:padding="@dimen/dialog_radio_button_padding" ></RadioButton>

        <RadioButton
            android:id="@+id/landscape_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:drawableLeft="@drawable/dialog_orientation_landscape"
            android:drawablePadding="@dimen/dialog_radio_button_drawable_padding"
            android:padding="@dimen/dialog_radio_button_padding"></RadioButton>
     <RadioButton
         android:visibility="gone"
         android:id="@+id/cast"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_weight="0.33"
         android:drawableLeft="@drawable/ic_tv_black_24dp"
         android:drawablePadding="@dimen/dialog_radio_button_drawable_padding"
         android:padding="@dimen/dialog_radio_button_padding"></RadioButton>

    </RadioGroup>
</ScrollView>