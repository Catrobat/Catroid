<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/DefaultDialog"
            android:orientation="vertical"
            android:theme="@android:style/Theme.Light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_signin_oauth_username_thanks"
            style="@style/DefaultDialog.TextView"
            android:layout_marginTop="@dimen/dialog_item_margin"
            android:text="@string/signin_thanks" />

        <TextView
            android:id="@+id/dialog_signin_oauth_username_choose_username"
            style="@style/DefaultDialog.TextView"
            android:text="@string/signin_choose_username" />

        <EditText
            android:id="@+id/dialog_signin_oauth_username"
            style="@style/DefaultDialog.EditText"
            android:selectAllOnFocus="true" />

         <TextView
             android:id="@+id/dialog_signin_oauth_username_choose_username_hint"
             style="@style/DefaultDialog.TextView"
             android:text="@string/signin_choose_username_hint" />

    </LinearLayout >

</ScrollView>
