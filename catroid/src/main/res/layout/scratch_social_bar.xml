<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scratch_share_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/material_design_spacing_large"
    android:layout_marginBottom="@dimen/material_design_spacing_large"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/scratch_project_favorites_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_scratch_favorites" />

    <TextView
        android:id="@+id/scratch_project_favorites_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/scratch_project_favorites_icon"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/scratch_project_loves_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_scratch_loves"
        android:layout_toEndOf="@+id/scratch_project_favorites_text" />

    <TextView
        android:id="@+id/scratch_project_loves_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/scratch_project_loves_icon"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/scratch_project_views_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_scratch_views"
        android:layout_toEndOf="@+id/scratch_project_loves_text" />

    <TextView
        android:id="@+id/scratch_project_views_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toEndOf="@+id/scratch_project_views_icon"
        android:layout_marginTop="3dp" />

</RelativeLayout>