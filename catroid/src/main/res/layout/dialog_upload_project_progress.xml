<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultDialog"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

          <TextView
              android:id="@+id/dialog_upload_progess_message"
              style="@style/DefaultDialog.TextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/progress_upload_dialog_message" />

       <ProgressBar
           android:id="@+id/dialog_upload_progress_progressbar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/dialog_upload_progess_message"
           android:layout_alignParentEnd="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/dialog_upload_progress_success_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/dialog_upload_progess_message"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>