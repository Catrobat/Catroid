<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/progress_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progress_bar_header"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_menu_buttons_container">

        <Button
            android:id="@+id/main_menu_button_continue"
            style="@style/MainMenuButton"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1.5"
            android:drawableLeft="@drawable/ic_main_menu_continue"
            android:onClick="handleContinueButton"
            android:text="@string/main_menu_continue" />

        <Button
            android:id="@+id/main_menu_button_new"
            style="@style/MainMenuButton"
            android:drawableLeft="@drawable/ic_main_menu_new"
            android:onClick="handleNewButton"
            android:text="@string/main_menu_new" />

        <Button
            android:id="@+id/main_menu_button_programs"
            style="@style/MainMenuButton"
            android:drawableLeft="@drawable/ic_main_menu_programs"
            android:onClick="handleProgramsButton"
            android:text="@string/main_menu_programs" />

        <Button
            android:id="@+id/main_menu_button_help"
            style="@style/MainMenuButton"
            android:drawableLeft="@drawable/ic_main_menu_help"
            android:onClick="handleHelpButton"
            android:text="@string/main_menu_help" />

        <Button
            android:id="@+id/main_menu_button_web"
            style="@style/MainMenuButton"
            android:drawableLeft="@drawable/ic_main_menu_community"
            android:onClick="handleWebButton"
            android:text="@string/main_menu_web" />

        <Button
            android:id="@+id/main_menu_button_upload"
            style="@style/MainMenuButton"
            android:drawableLeft="@drawable/ic_main_menu_upload"
            android:onClick="handleUploadButton"
            android:text="@string/main_menu_upload" />

    </LinearLayout>
    <!--Cast introduction screen-->
    <RelativeLayout
        android:id="@+id/cast_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#D0000000"
        android:gravity="center|bottom"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cast_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:textAlignment="center"
            android:gravity="center" />

        <Button
            android:id="@+id/cast_introduction_button"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="@string/ok"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
