<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        style="@style/Catroid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/marketing_created_with"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/activity_text_view_margin_large"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pocket_code_image"
        android:layout_marginTop="@dimen/activity_text_view_margin_large"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:background="@color/application_background_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/marketing_app_details"
        android:id="@+id/website_link"
        android:layout_below="@+id/pocket_code_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_text_view_margin_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/marketing_more_on_google_play"
        android:id="@+id/playStore_link"
        android:layout_marginTop="@dimen/activity_text_view_margin_large"
        android:layout_below="@+id/website_link"
        android:layout_centerHorizontal="true" />

    </RelativeLayout >