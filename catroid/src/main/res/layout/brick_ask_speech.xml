<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_set_variable_layout"
        style="@style/BrickContainer.Sound.Big">

        <include layout="@layout/icon_brick_category_sound" />

        <TextView
            android:id="@+id/brick_ask_speech_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_ask_speech_label" />

        <TextView
            android:id="@+id/brick_ask_speech_question_edit_text"
            style="@style/BrickEditText"
            android:layout_width="match_parent" />

       <TextView
           android:id="@+id/brick_ask_store_speech_label"
           style="@style/BrickText.SingleLine"
           android:text="@string/brick_ask_speech_store"
           app:layout_newLine="true" />

        <Spinner
            android:id="@+id/brick_ask_speech_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            app:layout_newLine="true" />

    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>
