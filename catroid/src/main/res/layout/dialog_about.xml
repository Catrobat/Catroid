<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultDialog">

    <TextView
        android:id="@+id/dialog_about_text_view_license_info"
        style="@style/DefaultDialog.Item"
        android:gravity="center|bottom"
        android:text="@string/dialog_about_license_info"
        android:textColor="@color/spritelist_details_text_color" />

    <TextView
        android:id="@+id/dialog_about_text_view_url"
        style="@style/DefaultDialog.Item"
        android:layout_below="@id/dialog_about_text_view_license_info"
        android:gravity="center|bottom"
        android:textColorLink="#E68B00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_about_text_catrobat_url"
        style="@style/DefaultDialog.Item"
        android:layout_below="@id/dialog_about_text_view_url"
        android:gravity="center|bottom"
        android:textColorLink="#E68B00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_about_text_view_version_name"
        style="@style/DefaultDialog.Item"
        android:layout_below="@id/dialog_about_text_catrobat_url"
        android:gravity="right|bottom"
        android:textSize="8sp"
        tools:ignore="SmallSp" />

</RelativeLayout>