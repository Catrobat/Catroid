<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_store_csv_into_userlist_layout"
        style="@style/BrickContainer.UserVariables.Medium">

        <include layout="@layout/icon_brick_category_data" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:layout_width="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/dialog_input_offset"
            android:text="@string/brick_store_csv_into_userlist_store" />

        <TextView
            android:id="@+id/brick_store_csv_into_userlist_column_edit_text"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true" />


        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_store_csv_into_userlist_csv"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/dialog_input_offset"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_store_csv_into_userlist_csv_edit_text"
            style="@style/BrickEditText"
            app:layout_inputType="string"
            app:layout_textField="true" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_store_csv_into_userlist_into"
            android:paddingStart="@dimen/material_design_spacing_small"
            android:paddingEnd="@dimen/material_design_spacing_small"/>

        <Spinner
            android:id="@+id/brick_store_csv_into_userlist_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale" />

    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>