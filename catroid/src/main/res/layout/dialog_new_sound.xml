<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dialog_content_area_padding_top"
    android:paddingStart="@dimen/dialog_content_area_padding"
    android:paddingEnd="@dimen/dialog_content_area_padding"
    android:paddingBottom="@dimen/dialog_content_area_padding_top">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_new_sound_recorder"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_sound_from_recorder"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_record_sound" />

            <TextView
                android:id="@+id/dialog_new_sound_media_library"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_sound_choose_sound"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_media_library_sounds" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_new_sound_gallery"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_sound_choose_file"
                android:textSize="?attr/medium"
                app:drawableTopCompat="@drawable/ic_music_library" />

            <TextView
                android:id="@+id/dialog_new_sound_pocketmusic"
                android:background="@drawable/new_object_dialog_selector"
                android:gravity="center"
                android:text="@string/add_sound_music"
                android:textSize="?attr/medium"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_music_composer" />

        </TableRow>
    </TableLayout>
</ScrollView>
