<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_set_camera_focus_layout"
        style="@style/BrickContainer.Look.Medium">

        <include layout="@layout/icon_brick_category_look" />

        <TextView
            android:id="@+id/brick_set_camera_focus_point_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_focus_point">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_horizontal_input"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true"
            app:layout_newLine="true"
            android:maxEms="10">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_horizontal_percent"
            style="@style/BrickText.SingleLine"
            android:text="@string/percent_symbol">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_horizontal_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_horizontal_and">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_vertical_input"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true"
            app:layout_newLine="true"
            android:maxEms="10">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_vertical_percent"
            style="@style/BrickText.SingleLine"
            android:text="@string/percent_symbol">
        </TextView>

        <TextView
            android:id="@+id/brick_set_camera_focus_vertical_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_vertical_flex">
        </TextView>

    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout> 