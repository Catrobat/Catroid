<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultDialog"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:theme="@android:style/Theme.Light">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_item_margin">

        <RadioGroup
            android:id="@+id/dialog_scratch_reconvert_radio_group"
            style="@style/DefaultDialog.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="0dp"
            android:paddingTop="18dp">

            <RadioButton
                android:id="@+id/dialog_scratch_reconvert_radio_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/reconvert_dialog_download"
                android:textColor="@color/spritelist_details_text_color" />

            <RadioButton
                android:id="@+id/dialog_scratch_reconvert_radio_reconvert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/reconvert_dialog_reconvert"
                android:textColor="@color/spritelist_details_text_color" />
        </RadioGroup>

    </RelativeLayout>
</ScrollView>