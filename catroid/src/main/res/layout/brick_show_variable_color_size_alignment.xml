<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_show_variable_color_size_layout"
        style="@style/BrickContainer.UserVariables.Medium">

        <include layout="@layout/icon_brick_category_data" />

        <TextView
            android:id="@+id/brick_show_variable_color_size_label"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_show_variable">
        </TextView>

        <Spinner
            app:layout_newLine="true"
            android:id="@+id/show_variable_color_size_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale">
        </Spinner>

        <TextView
            android:id="@+id/brick_show_variable_color_size_at_label"
            style="@style/BrickText.SingleLine"
            app:layout_newLine="true"
            android:text="@string/brick_show_variable_position" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_x_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/x_label" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_edit_text_x"
            style="@style/BrickEditText"
            app:layout_inputType="number"
            app:layout_textField="true" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_y_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/y_label">
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_edit_text_y"
            style="@style/BrickEditText" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_with_textview"
            style="@style/BrickText.SingleLine"
            app:layout_newLine="true"
            android:text="@string/brick_show_variable_size">
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_edit_relative_size"
            style="@style/BrickEditText" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_percent_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/percent_symbol" >
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_and_textview"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_show_variable_color">
        </TextView>

        <TextView
            android:id="@+id/brick_show_variable_color_size_edit_color"
            style="@style/BrickEditText"/>

        <TextView
            android:id="@+id/brick_show_variable_color_size_spinner"
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_show_variable_aligned"
            app:layout_newLine="true" >
        </TextView>

        <Spinner
            android:id="@+id/brick_show_variable_color_size_align_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale">
        </Spinner>

    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>
