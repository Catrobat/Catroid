<navigation android:id="@+id/project_list_nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/projectListFragment">

    <fragment
        android:id="@+id/projectListFragment"
        android:name="org.catrobat.catroid.ui.recyclerview.fragment.ProjectListFragment"
        android:label="ProjectListFragment">

        <action
            android:id="@+id/navigateToProjectOptionsFragment"
            app:destination="@id/projectOptionsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <argument
            android:name="intent"
            app:argType="android.content.Intent"
            android:defaultValue="@null"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/projectOptionsFragment"
        android:name="org.catrobat.catroid.ui.fragment.ProjectOptionsFragment"
        android:label="ProjectOptionsFragment">

        <action
            android:id="@+id/navigateToProjectDetailsFragment"
            app:destination="@id/projectDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/projectDetailsFragment"
        android:name="org.catrobat.catroid.ui.fragment.ProjectDetailsFragment"
        android:label="ProjectDetailsFragment" >
        <argument
            android:name="projectData"
            app:argType="org.catrobat.catroid.common.ProjectData"
            app:nullable="false" />
    </fragment>

</navigation>
