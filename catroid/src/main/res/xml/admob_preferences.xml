<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="settings_admob_screen"
    android:summary="@string/preference_description_enable_admob_bricks"
    android:title="@string/preference_title_admob">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="settings_admob_bricks"
        android:summary="@string/preference_description_enable_admob_bricks"
        android:title="@string/preference_title_admob" />

    <PreferenceScreen
        android:summary="@string/preference_admob_help_summary"
        android:title="@string/preference_admob_help">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/preference_admob_help_link" />

    </PreferenceScreen>

    <Preference
        android:key="setting_admob_banner_device_id"
        android:title="@string/preference_admob_device_id" />

</PreferenceScreen>