    <style name="ListViewItemTitleText" >
        <item name="android:paddingStart" >12.5dp</item >
        <item name="android:paddingEnd" >42dp</item >
        <item name="android:shadowColor" >@color/list_view_item_title_text_shadow_color</item >
        <item name="android:shadowDx" >0</item >
        <item name="android:shadowDy" >3</item >
        <item name="android:shadowRadius" >1.5</item >
        <item name="android:singleLine" >true</item >
        <item name="android:textColor" >@color/list_view_item_title_text_color</item >
        <item name="android:textSize" >22sp</item >
        <item name="android:layout_width" >fill_parent</item >
        <item name="android:layout_height" >wrap_content</item >
        <item name="android:ellipsize" >end</item >
    </style >


    <style name="ShowDetailsTitle" >
        <item name="android:textColor" >@color/list_view_item_title_text_color</item >
        <item name="android:textSize" >20sp</item >
        <item name="android:layout_alignWithParentIfMissing" >true</item >
        <item name="android:paddingStart" >10sp</item>
        <item name="android:paddingEnd" >10sp</item>
        <item name="android:paddingTop" >10sp</item>
    </style >

    <style name="ShowDetailsValue" >
        <item name="android:textColor" >@color/list_view_item_details_text_color</item >
        <item name="android:textSize" >18sp</item >
        <item name="android:layout_alignWithParentIfMissing" >true</item >
        <item name="android:paddingStart" >15sp</item>
        <item name="android:paddingEnd" >15sp</item>
        <item name="android:paddingTop" >1sp</item>
    </style >

