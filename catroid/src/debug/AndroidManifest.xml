<manifest xmlns:tools="http://schemas.android.com/tools"
    package="org.catrobat.catroid"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- screengrab -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <application>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="YOUR_API_KEY"/>
        <activity
            android:name=".uiespresso.ui.activity.ProjectUploadDialogTest$ProjectUploadTestActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.catrobat.paintroid.MainActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".uiespresso.ui.activity.ConnectBluetoothDeviceActivityTest$ConnectBluetoothDeviceTestActivity" />
    </application>

</manifest>
