<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1" package="at.tugraz.ist.catroid" android:versionName="0.3.3b">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
    	<activity android:name=".ConstructionSiteActivity">
    		<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    	</activity>
		<activity android:name=".stage.StageActivity" android:label="@string/stage" />
		<activity android:name=".download.DownloadActivity" android:label="@string/app_name" 
				  android:noHistory="true" >
		 <intent-filter>
	        <action android:name="android.intent.action.VIEW" />
	        <category android:name="android.intent.category.DEFAULT" />
	        <category android:name="android.intent.category.BROWSABLE" />
	       <data android:scheme="http" android:host="catroidwebtest.ist.tugraz.at"
	              android:pathPrefix="/catroid/download/" />
            <data android:scheme="http" android:host="www.catroid.org"
              android:pathPrefix="/catroid/download/" />
        	</intent-filter>
        </activity>
		
	
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
