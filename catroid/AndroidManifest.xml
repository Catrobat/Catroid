<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="10"
	package="at.tugraz.ist.catroid"
	android:versionName="0.5a"
	android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8" 
        android:targetSdkVersion="10" />
        
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
 	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	
	<application
		android:icon="@drawable/ic_launcher_catroid_fat"
		android:label="@string/app_name"
		android:debuggable="true"
		android:theme="@android:style/Theme.Light.NoTitleBar">
		
		<activity android:name=".ui.MainMenuActivity">
			<intent-filter>
				<action	android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action	android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data
					android:scheme="http"
					android:host="*"
					android:pathPattern="@string/catroid_extension_pathPattern" />
					
			</intent-filter>
		</activity>
		
		<activity
			android:name=".stage.StageActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation"
			android:label="@string/stage"
			android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
			
		<activity 
		android:name=".stage.PreStageActivity" 
		android:screenOrientation="portrait"/>

		<activity android:name=".ui.ProjectActivity" />
		
		<activity android:name=".ui.ScriptActivity" />
		
		<activity android:name=".ui.SpriteActivity" />
		
		<activity android:name=".ui.ScriptTabActivity" />
		
		<activity android:name=".ui.CostumeActivity" />
		
		<activity android:name=".ui.SoundActivity" />

		<activity android:name=".ui.SettingsActivity" android:theme="@style/settings_activity"/>
		
		<activity android:name=".bluetooth.DeviceListActivity" android:theme="@android:style/Theme.Dialog" />

		<activity android:name=".soundrecorder.SoundRecorderActivity" android:label="@string/soundrecorder_name">
		    <intent-filter>
				<action	android:name="android.intent.action.GET_CONTENT" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="audio/*"/>			
			</intent-filter>
		</activity>
		
	</application>
	
</manifest>
