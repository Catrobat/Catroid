<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Catroid PMD unnecessary ruleset"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd" >
    <description >PMD Java Controversial Ruleset for Catroid/PocketCode</description >
    <rule ref="rulesets/java/controversial.xml" >
        <exclude name="AssignmentInOperand" />
        <exclude name="AtLeastOneConstructor" />
        <exclude name="AvoidFinalLocalVariable" />
        <exclude name="AvoidPrefixingMethodParameters" />
        <exclude name="AvoidLiteralsInIfCondition" />
        <exclude name="BooleanInversion" />
        <exclude name="CallSuperInConstructor" />
        <exclude name="DataflowAnomalyAnalysis" />
        <exclude name="NullAssignment" />
        <exclude name="OnlyOneReturn" />
        <exclude name="UseConcurrentHashMap" />
        <exclude name="UseObjectForClearerAPI" />
        <exclude name="AvoidUsingShortType" />
        <exclude name="DefaultPackage" />
        <exclude name="UnnecessaryConstructor" />
        <exclude name="AvoidUsingVolatile" />
        <exclude name="DoNotCallGarbageCollectionExplicitly">
            <exclude-pattern>.*src\org\catrobat\catroid\ui\BaseActivity.java</exclude-pattern>
        </exclude>
        <exclude name="AvoidUsingNativeCode">
            <exclude-pattern>.*CatroidApplication.java</exclude-pattern>
        </exclude>
    </rule >
</ruleset >